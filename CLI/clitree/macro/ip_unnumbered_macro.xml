<ROOT>
	<MACRODEF name="IP-UNNUM-CONFIG-OPTIONS">
    <COMMAND
        name="ip unnumbered"
        help="Configure IPv4 unnumbered interface" >
        <PARAM
            name="donor-interface"
            help="Donor interface name"
            ptype="LOOPBACK_INTERFACE" />
        <ACTION builtin="clish_restcl">oper=PATCH url=/restconf/data/openconfig-interfaces:interfaces/interface=arg1/subinterfaces/subinterface=0/openconfig-if-ip:ipv4/unnumbered/interface-ref/config/interface body={"openconfig-if-ip:interface": "${donor-interface}"}</ACTION>
        <DOCGEN>
            <DESCRIPTION>
                Configure IPv4 unnumbered interface by borrowing IPv4 address from the Donor interface.
            </DESCRIPTION>
            <USAGE>
                Use this command to configure IPv4 unnumbered interface at the interface level.
            </USAGE>
            <EXAMPLE summary="Configure IPv4 unnumbered interface">
                sonic-cli(config)# interface Ethernet 0
                sonic-cli(conf-if-Ethernet0)# ip unnumbered Loopback1
            </EXAMPLE>
        </DOCGEN>
    </COMMAND>
	</MACRODEF>

	<MACRODEF name="IP-UNNUM-NO-CONFIG-OPTIONS">
    <COMMAND
        name="no ip unnumbered"
        help="Unconfigure IPv4 unnumbered interface" >
        <ACTION builtin="clish_restcl">oper=DELETE url=/restconf/data/openconfig-interfaces:interfaces/interface=arg1/subinterfaces/subinterface=0/openconfig-if-ip:ipv4/unnumbered/interface-ref/config/interface</ACTION>

        <DOCGEN>
            <DESCRIPTION>
                Unconfigure IPv4 unnumbered interface.
            </DESCRIPTION>
            <USAGE>
                Use this command to unconfigure IPv4 unnumbered interface at the interface level.
            </USAGE>
            <EXAMPLE summary="Unconfigure IPv4 unnumbered interface">
                sonic-cli(config)# interface Ethernet 0
                sonic-cli(conf-if-Ethernet0)# ip unnumbered Loopback1
                sonic-cli(conf-if-Ethernet0)# no ip unnumbered
            </EXAMPLE>
        </DOCGEN>
    </COMMAND>
    </MACRODEF>
</ROOT>
