<ROOT>

<MACRODEF name="STATIC_ROUTE_DIST_CFG"> 
     <PARAM name="pref" help="Route preference" ptype="RANGE_1_255" optional="true"></PARAM> 
</MACRODEF>

<MACRODEF name ="STATIC_ROUTE_INTF_CFG">
     <PARAM name="interface" help="Select an interface" ptype="SUBCOMMAND" mode="subcommand">
          <PARAM name="ifname" help="Interface-type number i.e Ethernet 12" ptype="PHY_VL_PO_INTERFACE">
                <PARAM help="switch subcommand" name="type_v" mode="switch" ptype="SUBCOMMAND" optional="true">
                      <PARAM help="Set nexthop-vrf" name="nexthop-vrf" ptype="SUBCOMMAND" mode="subcommand">
                            <PARAM name="next-hop-vrf" help="Name of next-hop-vrf" ptype="VRF_NAME">
                                  <PARAM name="pref" help="Route preference" ptype="RANGE_1_255" optional="true"></PARAM>
                            </PARAM>
                      </PARAM>
                      <PARAM name="pref" help="Route preference" ptype="RANGE_1_255" optional="true"></PARAM>
                 </PARAM>
          </PARAM>
     </PARAM>
</MACRODEF>

<MACRODEF name ="STATIC_ROUTE_INTF_DEL">
     <PARAM name="interface" help="Select an interface" ptype="SUBCOMMAND" mode="subcommand">
           <PARAM name="ifname" help="Interface-type number i.e Ethernet 12" ptype="PHY_VL_PO_INTERFACE">
                <PARAM name="nexthop-vrf" help="Select nexthop-vrf" ptype="SUBCOMMAND" mode="subcommand" optional="true">
                      <PARAM name="next-hop-vrf" help="Name of  next-hop-vrf" ptype="VRF_NAME"> </PARAM>
                </PARAM>
           </PARAM>
     </PARAM>
</MACRODEF>

<MACRODEF name="STATIC-ROUTE-DEL">
         <PARAM name="prefix" help="Destination prefix" ptype="IParg1_ADDR_MASK">
            <PARAM name="route-target" help="Route target" ptype="SUBCOMMAND" mode="switch">
                 <MACRO name="STATIC_ROUTE_INTF_DEL" arg=""/>
                 <PARAM name="blackhole" help="Silently discard pkts when matched" mode="subcommand"  ptype="SUBCOMMAND">
                 </PARAM>
                 <PARAM name="next-hop-addr" help="Set next-hop address" ptype="IParg1_ADDR">
                      <PARAM help="switch subcommand" name="type" mode="switch" ptype="SUBCOMMAND" optional="true">
                           <MACRO name="STATIC_ROUTE_INTF_DEL" arg=""/>
                           <PARAM name="nexthop-vrf" help="Select nexthop-vrf" ptype="SUBCOMMAND" mode="subcommand">
                               <PARAM name="next-hop-vrf" help="Name of  next-hop-vrf" ptype="VRF_NAME">
                               </PARAM>
                           </PARAM>
                      </PARAM>
                 </PARAM>
            </PARAM>
         </PARAM>
</MACRODEF>

<MACRODEF name="STATIC-ROUTE-CFG">
         <PARAM name="prefix" help="Destination prefix" ptype="IParg1_ADDR_MASK">
            <PARAM name="route-target" help="Route target" ptype="SUBCOMMAND" mode="switch" >
                <MACRO name="STATIC_ROUTE_INTF_CFG" arg=""/>
                 <PARAM name="blackhole" help="Silently discard pkts when matched" mode="subcommand"  ptype="SUBCOMMAND">
                      <MACRO name="STATIC_ROUTE_DIST_CFG" arg=""/>
                 </PARAM>
                 <PARAM name="next-hop-addr" help="Set next-hop address" ptype="IParg1_ADDR">
                      <PARAM help="switch subcommand" name="type" mode="switch" ptype="SUBCOMMAND" optional="true">
                           <MACRO name="STATIC_ROUTE_INTF_CFG" arg=""/>
                           <MACRO name="STATIC_ROUTE_DIST_CFG" arg=""/>
                           <PARAM name="nexthop-vrf" help="Select nexthop-vrf" ptype="SUBCOMMAND" mode="subcommand">
                               <PARAM name="next-hop-vrf" help="Name of  next-hop-vrf" ptype="VRF_NAME">
                                   <MACRO name="STATIC_ROUTE_DIST_CFG" arg=""/>
                               </PARAM>
                           </PARAM>
                      </PARAM>
                 </PARAM>
            </PARAM>
         </PARAM>
</MACRODEF>
</ROOT>

