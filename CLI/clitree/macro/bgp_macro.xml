           <MACRO name="CLEAR_BGP_INOUT_SUB_CMDS" arg=""></MACRO>
        </PARAM>
        <PARAM name="prefix" help="IPv4 Prefix to clear BGP" ptype="SUBCOMMAND" mode="subcommand" optional="true">
