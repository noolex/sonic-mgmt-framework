<ROOT>

  <MACRODEF name="IP-HELPER-CONFIG-OPTIONS">

    <COMMAND name="ip helper-address" help="Configure IP helper server address"
        command_tables="arg1:arg1/arg2/arg2_LIST/arg3=${arg4}"
        render_command_cb="ip_helper_address">
      <PARAM name="addr" help="IP address" ptype="IP_ADDR"
        dbpath="arg1:arg1/arg2/arg2_LIST/helper_addresses"> </PARAM>
      <ACTION builtin="clish_restcl">
          oper=PATCH
          url=/restconf/data/openconfig-ip-helper:ip-helper/interfaces/interface=${iface_uri}${vlan_name}${po_name}/servers/server=default,${addr}/config
          body={"openconfig-ip-helper:config": { "vrf" : "default" , "ip" : "${addr}"} }
      </ACTION>
      <DOCGEN>
        <DESCRIPTION>
          Configures IP helper server address for an interface.
        </DESCRIPTION>
      </DOCGEN>
    </COMMAND>

    <COMMAND name="ip helper-address vrf" help="Specify non-default vrf"> 
      <PARAM name="vrfname" help="VRF name" ptype="VRF_NAME"> 
        <PARAM name="addr" help="IP address" ptype="IP_ADDR"> 
        </PARAM>
      </PARAM>
      <ACTION builtin="clish_restcl">
        oper=PATCH
        url=/restconf/data/openconfig-ip-helper:ip-helper/interfaces/interface=${iface_uri}${vlan_name}${po_name}/servers/server=${vrfname},${addr}/config
        body={"openconfig-ip-helper:config": { "vrf" : "${vrfname}" , "ip" : "${addr}"} }
      </ACTION>
      <DOCGEN>
        <DESCRIPTION>
          Configures IP helper server address in non-default vrf for an interface.
        </DESCRIPTION>
      </DOCGEN>
    </COMMAND>

  </MACRODEF>

  <MACRODEF name="IP-HELPER-NO-CONFIG-OPTIONS">

    <COMMAND name="no ip helper-address" help="Unconfigure IP helper server address">
      <PARAM name="addr" help="IP address" ptype="IP_ADDR"> 
      </PARAM>
      <ACTION builtin="clish_restcl">
          oper=DELETE
          url=/restconf/data/openconfig-ip-helper:ip-helper/interfaces/interface=${iface_uri}${vlan_name}${po_name}/servers/server=default,${addr}
      </ACTION>
      <DOCGEN>
        <DESCRIPTION>
          Removes IP helper server address from an interface.
        </DESCRIPTION>
      </DOCGEN>
    </COMMAND>

    <COMMAND name="no ip helper-address vrf" help="Specify non-default vrf">
      <PARAM name="vrfname" help="VRF name" ptype="VRF_NAME"> 
        <PARAM name="addr" help="IP address" ptype="IP_ADDR"> 
        </PARAM>
      </PARAM>
      <ACTION builtin="clish_restcl">
          oper=DELETE
          url=/restconf/data/openconfig-ip-helper:ip-helper/interfaces/interface=${iface_uri}${vlan_name}${po_name}/servers/server=${vrfname},${addr}
      </ACTION>
      <DOCGEN>
        <DESCRIPTION>
          Removes IP helper server address on non-default vrf from an interface.
        </DESCRIPTION>
      </DOCGEN>
    </COMMAND>

  </MACRODEF>

</ROOT>
