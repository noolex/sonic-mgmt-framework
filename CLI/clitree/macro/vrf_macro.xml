<ROOT>

<MACRODEF name="BIND-INTF-TO-VRF">

    <COMMAND name="ip vrf" help="Bind interface to specified VRF domain"/>
    <COMMAND
        name="ip vrf forwarding"
        help="Configure forwarding table"
        mode="subcommand"
        ptype="SUBCOMMAND"
        >
        <PARAM
          name="vrf-name"
          help="Name of VRF"
          ptype="STRING_15"
          >
        </PARAM>
        <ACTION
          builtin="clish_restcl">oper=PATCH url=/restconf/data/openconfig-network-instance:network-instances/network-instance=${vrf-name}/interfaces/interface=arg1 body={ "openconfig-network-instance:interface": [ { "id": "arg1", "config" : { "id": "arg1" } } ] }
        </ACTION>
    </COMMAND>

    <COMMAND name="no ip vrf" help="Unbind interface from specified VRF domain"/>
    <COMMAND
        name="no ip vrf forwarding"
        help="Configure forwarding table"
        mode="subcommand"
        ptype="SUBCOMMAND"
        >
        <PARAM
          name="vrf-name"
          help="Name of VRF"
          ptype="STRING_15"
          >
        </PARAM>
        <ACTION
          builtin="clish_restcl">oper=DELETE url=/restconf/data/openconfig-network-instance:network-instances/network-instance=${vrf-name}/interfaces/interface=arg1
        </ACTION>
    </COMMAND>

</MACRODEF>

</ROOT>
