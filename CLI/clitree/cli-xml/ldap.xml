<CLISH_MODULE
    xmlns="http://www.dellemc.com/sonic/XMLSchema"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:xi="http://www.w3.org/2001/XInclude"
    xsi:schemaLocation="http://www.dellemc.com/sonic/XMLSchema
                        http://www.dellemc.com/sonic/XMLSchema/clish.xsd"
    >
<!--=========================================================================-->

<PTYPE
     name="LDAP_SSL"
     method="select"
     pattern="on(on) off(off) start_tls(start_tls)"
     help=""
     />

<PTYPE
     name="LDAP_USE_TYPE"
     method="select"
     pattern="all(all) nss(nss) sudo(sudo) pam(pam)"
     help=""
     />
 
    
<PTYPE
     name="LDAP_SERVER_PORT"
     method="integer"
     pattern="1..65535"
     help=""
     />

<PTYPE
     name="LDAP_SERVER_PRIORITY"
     method="integer"
     pattern="1..99"
     help=""
     />
     
<!--=======================================================-->

<!-- Config mode -->
<VIEW name="configure-view">   
   <COMMAND name = "ldap-server" help="Configure LDAP server">
        <PARAM name="ldap-global-options" help="" ptype="SUBCOMMAND" mode="switch">
        </PARAM>
      <ACTION builtin="clish_pyobj">sonic_cli_ldap ldap_global_config ${__params}</ACTION>
    </COMMAND>

    <COMMAND name="ldap-server host" help="Configure host name for a LDAP server">
        <PARAM name="host_val" help="IPV4|IPV6 address" ptype="IPV4V6_ADDR"/>
				<PARAM name="use-type" help="Configure server type" ptype="SUBCOMMAND" mode="subcommand" optional="true">
					<PARAM name="use_type_val" ptype="LDAP_USE_TYPE" help="Server type (Default: all)"/>
				</PARAM>
				<PARAM name="port" help="Configure port number" ptype="SUBCOMMAND" mode="subcommand" optional="true">
					<PARAM name="server_port_val" ptype="LDAP_SERVER_PORT" help="Port number"/>
				</PARAM>
				<PARAM name="priority" help="Configure priority" ptype="SUBCOMMAND" mode="subcommand" optional="true">
					<PARAM name="priority_val" ptype="LDAP_SERVER_PRIORITY" help="Priority (Default: 1)"/>
				</PARAM>
				<PARAM name="ssl" help="Configure TLS" ptype="SUBCOMMAND" mode="subcommand" optional="true">
					<PARAM name="ssl_val" ptype="LDAP_SSL" help="TLS (Default: off)"/>
				</PARAM>					
			<ACTION builtin="clish_pyobj">sonic_cli_ldap ldap_server_config ${__params}</ACTION>
    </COMMAND>

    <COMMAND name="ldap-server map" help="Configure LDAP server for map">
    	<PARAM name="ldap-server_map_options" help="" ptype="SUBCOMMAND" mode="switch">
        <PARAM name="attribute" help="Configure attribute map" ptype="SUBCOMMAND" mode="subcommand" optional="true">
        	<PARAM name="attribute_from_val" ptype="STRING" help="Attribute map key"/>
        	<PARAM name="to" help="Configure attribute map value" ptype="SUBCOMMAND" mode="subcommand">
        		<PARAM name="attribute_to_val" ptype="STRING" help="Attribute map value"/>
        	</PARAM>
        </PARAM>
    	
        <PARAM name="objectclass" help="Configure objectclass map" ptype="SUBCOMMAND" mode="subcommand" optional="true">
        	<PARAM name="objectclass_from_val" ptype="STRING" help="Objectclass map key"/>
        	<PARAM name="to" help="Configure objectclass map value" ptype="SUBCOMMAND" mode="subcommand">
        		<PARAM name="objectclass_to_val" ptype="STRING" help="Objectclass map value"/>
        	</PARAM>
        </PARAM>
        
        <PARAM name="default-attribute-value" help="Configure default-attribute-value map" ptype="SUBCOMMAND" mode="subcommand" optional="true">
        	<PARAM name="default_from_val" ptype="STRING" help="Default-attribute-value map key"/>
        	<PARAM name="to" help="Configure default-attribute-value map value" ptype="SUBCOMMAND" mode="subcommand">
        		<PARAM name="default_to_val" ptype="STRING" help="Default-attribute-value map value"/>
        	</PARAM>
        </PARAM>
        
        <PARAM name="override-attribute-value" help="Configure override-attribute-value map" ptype="SUBCOMMAND" mode="subcommand" optional="true">
        	<PARAM name="override_from_val" ptype="STRING" help="Override-attribute-value map key"/>
        	<PARAM name="to" help="Configure override-attribute-value map value" ptype="SUBCOMMAND" mode="subcommand">
        		<PARAM name="override_to_val" ptype="STRING" help="Override-attribute-value map value"/>
        	</PARAM>
        </PARAM>
                
			</PARAM>
			<ACTION builtin="clish_pyobj">sonic_cli_ldap ldap_map_config ${__params}</ACTION>
    </COMMAND>
			
    <COMMAND name="no ldap-server host" help="Unconfigure host name for a LDAP server">
        <PARAM name="host_val" help="IPV4|IPV6 address" ptype="IPV4V6_ADDR"/>
	        <PARAM name="ldap-map-options" help="" ptype="SUBCOMMAND" mode="switch" optional="true">
						<PARAM name="use-type" help="Unconfigure server type" ptype="SUBCOMMAND" mode="subcommand">
						</PARAM>
						<PARAM name="port" help="Unconfigure port number" ptype="SUBCOMMAND" mode="subcommand">
						</PARAM>
						<PARAM name="priority" help="Unconfigure priority" ptype="SUBCOMMAND" mode="subcommand">
						</PARAM>
						<PARAM name="ssl" help="Unconfigure TLS" ptype="SUBCOMMAND" mode="subcommand">
						</PARAM>
				</PARAM>					
			<ACTION builtin="clish_pyobj">sonic_cli_ldap del_ldap_server_config ${__params}</ACTION>
    </COMMAND>

    <COMMAND name="no ldap-server map" help="Unconfigure LDAP server for map">
    	<PARAM name="ldap-server_map_options" help="" ptype="SUBCOMMAND" mode="switch">
        <PARAM name="attribute" help="Unconfigure attribute map" ptype="SUBCOMMAND" mode="subcommand" optional="true">
        	<PARAM name="attribute_from_val" ptype="STRING" help="Attribute map key"/>
        </PARAM>
    	
        <PARAM name="objectclass" help="Unconfigure objectclass map" ptype="SUBCOMMAND" mode="subcommand" optional="true">
        	<PARAM name="objectclass_from_val" ptype="STRING" help="Objectclass map key"/>
        </PARAM>
        
        <PARAM name="default-attribute-value" help="Unconfigure default-attribute-value map" ptype="SUBCOMMAND" mode="subcommand" optional="true">
        	<PARAM name="default_from_val" ptype="STRING" help="Default-attribute-value map key"/>
        </PARAM>
        
        <PARAM name="override-attribute-value" help="Unconfigure override-attribute-value map" ptype="SUBCOMMAND" mode="subcommand" optional="true">
        	<PARAM name="override_from_val" ptype="STRING" help="Override-attribute-value map key"/>
        </PARAM>
                
			</PARAM>
			<ACTION builtin="clish_pyobj">sonic_cli_ldap del_ldap_map_config ${__params}</ACTION>
    </COMMAND>
			    
</VIEW>

</CLISH_MODULE>
