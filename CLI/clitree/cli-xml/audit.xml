<!DOCTYPE CLISH_MODULE [
]>

<CLISH_MODULE xmlns="http://www.dellemc.com/sonic/XMLSchema"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:xi="http://www.w3.org/2001/XInclude"
    xsi:schemaLocation="http://www.dellemc.com/sonic/XMLSchema
                        http://www.dellemc.com/sonic/XMLSchema/clish.xsd">
<!--=======================================================-->
  <PTYPE
     name="AUDIT_SHOW_TYPE"
     method="select"
     pattern="all(all) brief(brief)"
     help=""
  />
<!--=======================================================-->

<VIEW name="enable-view">
    <!-- show audit-log -->
    <COMMAND
        name="show audit-log"
        help="Display audit log"
        mode="subcommand"
        ptype="SUBCOMMAND">
        <PARAM name="stype"
            help="Display either all or subset of audit log"
            ptype="AUDIT_SHOW_TYPE"
            optional="true">
        </PARAM>
        <ACTION>
            python $SONIC_CLI_ROOT/sonic-cli-audit-log-rpc.py ${stype} rpc_sonic_auditlog_show_auditlog;
        </ACTION>
    </COMMAND>

    <!-- clear audit-log -->
    <COMMAND 
        name="clear audit-log" 
        help="Clear audit log" >
        <ACTION>
            python $SONIC_CLI_ROOT/sonic-cli-audit-log-rpc.py rpc_sonic_auditlog_clear_auditlog; 
        </ACTION>
    </COMMAND>

</VIEW>
</CLISH_MODULE>



