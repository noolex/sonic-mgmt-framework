<!-- Ethernet -->
<!-- ======== -->
<VIEW name="configure-if-view">
    <COMMAND
        name="ip pim"
        help="Enable PIM on interface">
        <ACTION>
        </ACTION>
    </COMMAND>

    <COMMAND
        name="ip pim sparse-mode"
        help="Enable PIM sparse-mode">
        <ACTION>
        </ACTION>
    </COMMAND>

    <COMMAND
        name="ip pim drpriority"
        help="Set the designated router (DR) priority">
        <PARAM
            help="Range 1_4294967295"
            name="drprio"
            ptype="RANGE_1_4294967295">
        </PARAM>
        <ACTION>
        </ACTION>
    </COMMAND>

    <COMMAND
        name="ip pim hello"
        help="Set the hello interval for PIM">
        <PARAM
            help="Range 1 to 180 in seconds"
            name="pim-hello"
            ptype="RANGE_1_180">
        </PARAM>
        <ACTION>
        </ACTION>
    </COMMAND>

    <COMMAND
        name="ip pim bfd"
        help="Enable BFD on PIM">
        <ACTION>
        </ACTION>
    </COMMAND>

<!-- no ip pim -->
    <COMMAND
        name="no ip pim"
        help="Disable PIM on interface">
