<!DOCTYPE CLISH_MODULE [
]>

<CLISH_MODULE xmlns="http://www.dellemc.com/sonic/XMLSchema"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:xi="http://www.w3.org/2001/XInclude"
    xsi:schemaLocation="http://www.dellemc.com/sonic/XMLSchema
                        http://www.dellemc.com/sonic/XMLSchema/clish.xsd">
<!-- ********************************************************************** -->
<!-- *  CLEAR COUNTERS COMMANDS                                           * -->
<!--
clear counters [interface <interface>]
-->
<!-- *  View : enable-view                                                * -->
<!-- ********************************************************************** -->
    <VIEW name="enable-view">
        <COMMAND name="clear counters"
                 help="Clear counters"
                 ptype="SUBCOMMAND"
                 >
                 <PARAM name="interface"
                        help="Clear counters interface"
                        ptype="SUBCOMMAND"
                        mode="subcommand"
                        >
                        <PARAM
                            name="interface-switch"
                            help="interface type"
                            ptype="SUBCOMMAND"
                            mode="switch"
                            >
                            <PARAM
                                name="all"
                                help="Clear all interface counters"
                                ptype="SUBCOMMAND"
                                mode="subcommand"
                                >
                            </PARAM>
                            <PARAM
                                name="Eth"
                                help="Clear Physical interface counters"
                                test="${SONIC_CLI_IFACE_MODE} = standard"
                                ptype="SUBCOMMAND"
                                mode="subcommand"
                                >
                                <PARAM
                                    name="ifId"
                                    help="Physical Interface"
                                    ptype="ETH_PHY_SLOT_PORT_SUBPORT"
                                    >
                                </PARAM>
                            </PARAM>
                            <PARAM
                                name="Ethernet"
                                help="Clear Physical interface counters"
                                test="-z ${SONIC_CLI_IFACE_MODE}"
                                ptype="SUBCOMMAND"
                                mode="subcommand"
                                >
                                <PARAM
                                    name="ifId"
                                    help="Physical Interface"
                                    ptype="UINT16"
                                    >
                                </PARAM>
                            </PARAM>
                            <PARAM 
                                name="PortChannel"
                                help="Clear PortChannel interface counters"
                                ptype="SUBCOMMAND"
                                mode="subcommand"
                                >
                                <PARAM 
                                    name="ifId"
                                    help="PortChannel interface number"
                                    ptype="LAG_ID">
                                </PARAM>
                            </PARAM>
                        </PARAM>
                 </PARAM>
            <ACTION builtin="clish_pyobj">sonic-cli-counters rpc_interfaces_clear_counters ${interface-switch}${ifId}</ACTION>
        </COMMAND>
    </VIEW>
</CLISH_MODULE>

