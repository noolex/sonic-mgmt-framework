<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE CLISH_MODULE [
]>
<CLISH_MODULE
      xmlns="http://www.dellemc.com/sonic/XMLSchema"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:xi="http://www.w3.org/2001/XInclude"
      xsi:schemaLocation="http://www.dellemc.com/sonic/XMLSchema 
      http://www.dellemc.com/sonic/XMLSchema/clish.xsd"
      >
  <VIEW name="enable-view">
    <COMMAND
         name="show image"
         help="Show image information"
         >
        <PARAM name="list"
               help="List images"
               mode="subcommand"
               ptype="SUBCOMMAND">
         </PARAM>
       <ACTION
           builtin="clish_pyobj">sonic_cli_img get_sonic_image_management_sonic_image_management show_image.j2
       </ACTION>
    </COMMAND>
    <COMMAND
         name="image"
         help="Image related commands"
         >
    </COMMAND> 
    <COMMAND
	 name="image set-default"
	 help="Set default boot image">
         <PARAM
	      name="img-name"
	      help="Image name"
	      ptype="STRING"
	      >
	 </PARAM>
      <ACTION
          builtin="clish_restcl">oper=POST url=/restconf/operations/sonic-image-management:image-default body={"sonic-image-management:input":{"imagename":"${img-name}"}} 
      </ACTION>
    </COMMAND>
    <COMMAND
	 name="image install"
	 help="Install image">
         <PARAM
	      name="img-path"
	      help="Path(file://filepath) or URL(http:// or https://) to image"
	      ptype="STRING"
	      >
	 </PARAM>
       <ACTION 
	   builtin="clish_restcl">oper=POST url=/restconf/operations/sonic-image-management:image-install body={"sonic-image-management:input":{ "imagename":"${img-path}"}}
       </ACTION>
    </COMMAND>
    <COMMAND
	name="image remove"
	help="Remove an image "
   	ptype="SUBCOMMAND">
	<PARAM name="remove_option"
          help="Remove an image or all unused images."
          ptype="SUBCOMMAND"
          mode="switch">
         <PARAM name="all"
                help="Remove all images which are not current or next"
                mode="subcommand"
                ptype="SUBCOMMAND">
         </PARAM>          
         <PARAM name="image"
                help="Enter image to remove"
                ptype="STRING">
         </PARAM>
	 </PARAM>
      <ACTION
         builtin="clish_pyobj">sonic_cli_img rpc_sonic_image_management_image_remove remove_option=${remove_option} image=${image}
      </ACTION>
    </COMMAND>
  </VIEW>
</CLISH_MODULE>
