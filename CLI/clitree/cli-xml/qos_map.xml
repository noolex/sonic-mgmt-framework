<CLISH_MODULE
    xmlns="http://www.dellemc.com/sonic/XMLSchema"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:xi="http://www.w3.org/2001/XInclude"
    xsi:schemaLocation="http://www.dellemc.com/sonic/XMLSchema
    http://www.dellemc.com/sonic/XMLSchema/clish.xsd"
    >
  <VIEW name="configure-view">
    <!-- maps -->
    <COMMAND
        name="dscp-tc-map"
        help="QoS DSCP-to-TC Map Configuration"
        mode="subcommand"
        ptype="SUBCOMMAND"
        view="configure-dscp-tc-map-view"
        viewid="map_name=${name}"
        >
        <PARAM
           name="name"
           help="Name of the map"
           ptype="STRING_32"
           >
        </PARAM>
        <ACTION builtin="clish_restcl">
            oper=PATCH
            url=/restconf/data/openconfig-qos:qos/openconfig-qos-maps-ext:dscp-maps/dscp-map=${name}
            body={"openconfig-qos-maps-ext:dscp-map": [{"name": "${name}"}]}
        </ACTION>
    </COMMAND>

    <!-- no maps -->
    <COMMAND name="no dscp-tc-map" help="Unconfigure a dscp-tc map">
      <PARAM name="name" help="Name of the map" ptype="STRING_32"> </PARAM>
        <ACTION builtin="clish_restcl"> 
            oper=DELETE
            url=/restconf/data/openconfig-qos:qos/openconfig-qos-maps-ext:dscp-maps/dscp-map=${name}
        </ACTION>
    </COMMAND>
  </VIEW>


  <VIEW
    name="configure-dscp-tc-map-view"
    prompt="${SYSTEM_NAME}(conf-dscp-tc-map-${map_name})# "
    depth="2"
    >
    <!-- Inheritance -->
    <NAMESPACE
        ref="configure-view"
        help="false"
        completion="false"
        />

     <COMMAND name="dscp" help="DSCP value" mode="subcommand" ptype="SUBCOMMAND" >
        <PARAM name="dscp" help="dscp value" ptype="STRING_32" >
            <PARAM name="traffic-class" help="Traffic Class" mode="subcommand" ptype="SUBCOMMAND" >
                <PARAM name="tc" help="Traffic-class value" ptype="STRING_32" >
                </PARAM>
            </PARAM>
        </PARAM>
        <ACTION builtin="clish_restcl">
            oper=PATCH
            url=/restconf/data/openconfig-qos:qos/openconfig-qos-maps-ext:dscp-maps/dscp-map=${map_name}/dscp-map-entries/dscp-map-entry=${dscp}
            body={"openconfig-qos-maps-ext:dscp-map-entry": [{"dscp":${dscp}, "config": {"fwd_group": "${tc}"}}]}
        </ACTION>
      </COMMAND>

      <!-- no dscp-->
      <COMMAND name="no dscp" help="Unconfigure a mapping">
        <PARAM name="dscp" help="dscp value" ptype="STRING_32" >
        </PARAM>
        <ACTION builtin="clish_restcl">
            oper=DELETE
            url=/restconf/data/openconfig-qos:qos/openconfig-qos-maps-ext:dscp-maps/dscp-map=${map_name}/dscp-map-entries/dscp-map-entry=${dscp}
        </ACTION>
      </COMMAND>
  </VIEW>


  <VIEW name="enable-view">

    <!--show dscp-map -->
    <COMMAND name="show dscp-tc-map" help="Show configured dscp-tc-map">
      <PARAM name="name" help="Name of the dscp-tc-map" ptype="STRING_32"> </PARAM>
        <ACTION builtin="clish_pyobj">
            sonic_cli_qos_map get_openconfig_qos_dscp_tc_map ${name} 
        </ACTION>
    </COMMAND>
  </VIEW>

 </CLISH_MODULE>
