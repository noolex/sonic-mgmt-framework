<CLISH_MODULE
    xmlns="http://www.dellemc.com/sonic/XMLSchema"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:xi="http://www.w3.org/2001/XInclude"
    xsi:schemaLocation="http://www.dellemc.com/sonic/XMLSchema
    http://www.dellemc.com/sonic/XMLSchema/clish.xsd"
    >
  <VIEW name="configure-view">
    <!-- scheduler policy -->
    <COMMAND
        name="qos scheduler-policy"
        help="Scheduler Policy Configuration"
        mode="subcommand"
        ptype="SUBCOMMAND"
        view="configure-qos-scheduler-policy-view"
        viewid="scheduler_policy_name=${name}"
        command_tables="sonic-scheduler:sonic-scheduler/SCHEDULER/SCHEDULER_LIST/name={name}"
        render_command_cb="qos_scheduler_policy_cb"
        >
        <PARAM
           name="name"
           help="Name of the scheduler policy"
           ptype="STRING_32"
           >
        </PARAM>
        <ACTION builtin="clish_pyobj">sonic_cli_qos_scheduler patch_openconfig_qos_qos_scheduler_policies ${name}
        </ACTION>
    </COMMAND>

    <!-- no scheduler policy -->
    <COMMAND name="no qos scheduler-policy" help="Unconfigure a scheduler policy">
      <PARAM name="name" help="Name of the scheduler policy" ptype="STRING_32"> </PARAM>
        <ACTION builtin="clish_restcl">
            oper=DELETE
            url=/restconf/data/openconfig-qos:qos/scheduler-policies/scheduler-policy=${name}
        </ACTION>
    </COMMAND>
  </VIEW>


  <VIEW
    name="configure-qos-scheduler-policy-view"
    prompt="${SYSTEM_NAME}(conf-sched-policy-${scheduler_policy_name})# "
    depth="2"
    >
    <!-- Inheritance -->
    <NAMESPACE
        ref="configure-view"
        help="false"
        completion="false"
        />
    <COMMAND name="show configuration" help="show scheduler-policy configuration">
           <ACTION builtin="clish_pyobj">sonic_cli_show_config show_view views=configure-qos-scheduler-policy view_keys="name=${scheduler_policy_name}" </ACTION>
    </COMMAND>

    <COMMAND
        name="queue"
        help="Scheduler for queues"
        ptype="SUBCOMMAND"
        mode="subcommand"
        view="configure-qos-scheduler-policy-per-queue-view"
        viewid="top_scheduler_policy_name=${scheduler_policy_name};scheduler_policy_per_queue_name=${sequence}; "
        view_keys="name=${scheduler_policy_name}@${sequence}"
        view_tables="sonic-scheduler:sonic-scheduler/SCHEDULER/SCHEDULER_LIST/name={name}"
        render_command_cb="qos_scheduler_policy_q_cb"
        >
        <PARAM
            name="sequence"
            help="Queue id: 0-7 for interface queues, 0-47 for CPU queues."
            ptype="RANGE_0_47">
        </PARAM>
        <ACTION builtin="clish_pyobj">sonic_cli_qos_scheduler patch_openconfig_qos_qos_scheduler_policies_scheduler_policy_schedulers_scheduler ${scheduler_policy_name} ${sequence}
        </ACTION>
      </COMMAND>
      <COMMAND
          name="port"
          help="Scheduler for interface"
          ptype="SUBCOMMAND"
          mode="subcommand"
          view="configure-qos-scheduler-policy-per-port-view"
          viewid="top_scheduler_policy_name=${scheduler_policy_name}"
          view_keys="name=${scheduler_policy_name}@255"
          view_tables="sonic-scheduler:sonic-scheduler/SCHEDULER/SCHEDULER_LIST/name={name}"
          render_command_cb="qos_scheduler_policy_port_cb"
          >
        <ACTION builtin="clish_pyobj">sonic_cli_qos_scheduler patch_openconfig_qos_qos_scheduler_policies_scheduler_policy_schedulers_scheduler ${scheduler_policy_name} 255
        </ACTION>
      </COMMAND>

      <!-- no scheduler id-->
      <COMMAND
          name="no queue"
          help="Scheduler for queues"
          ptype="SUBCOMMAND"
          mode="subcommand"
          >
          <PARAM
              name="sequence"
              help="Queue id: 0-7 for interface queues, 0-47 for CPU queues."
              ptype="RANGE_0_47">
          </PARAM>
          <ACTION builtin="clish_pyobj">sonic_cli_qos_scheduler delete_openconfig_qos_qos_scheduler_policies_scheduler_policy_schedulers_scheduler ${scheduler_policy_name} ${sequence}
        </ACTION>
      </COMMAND>
      <COMMAND
          name="no port"
          help="Scheduler for interface"
          ptype="SUBCOMMAND"
          mode="subcommand"
          >
       <ACTION builtin="clish_pyobj">sonic_cli_qos_scheduler delete_openconfig_qos_qos_scheduler_policies_scheduler_policy_schedulers_scheduler ${scheduler_policy_name} 255
        </ACTION>
      </COMMAND>

  </VIEW>


  <VIEW
    name="configure-qos-scheduler-policy-per-queue-view"
    prompt="${SYSTEM_NAME}(conf-scheduler-${top_scheduler_policy_name}-queue-${scheduler_policy_per_queue_name})# "
    depth="3"
    >
    <!-- Inheritance -->
    <NAMESPACE
        ref="configure-view"
        help="false"
        completion="false"
        />
    <COMMAND name="show configuration" help="show scheduler_policy queue configuration">
        <ACTION builtin="clish_pyobj">sonic_cli_show_config show_view views=configure-qos-scheduler-policy-per-queue view_keys="name=${top_scheduler_policy_name}@${scheduler_policy_per_queue_name}" </ACTION>
    </COMMAND>


        <COMMAND
            name="type"
            help="scheduler type (strict/dwrr/wrr)"
            >
            <PARAM
                name="type"
                help="Configure scheduler type"
                ptype="SCHEDULER_TYPE_OPTION" />
            <ACTION builtin="clish_pyobj">sonic_cli_qos_scheduler patch_openconfig_qos_qos_scheduler_policies_scheduler_policy_schedulers_scheduler_config_priority ${top_scheduler_policy_name} ${scheduler_policy_per_queue_name} ${type} 
            </ACTION>
        </COMMAND>

        <COMMAND name="no" help="Negate a commands"/>
        <COMMAND name="no type" help="Unconfigure scheduler type">
        <ACTION builtin="clish_pyobj">sonic_cli_qos_scheduler delete_openconfig_qos_qos_scheduler_policies_scheduler_policy_schedulers_scheduler_config_priority ${top_scheduler_policy_name} ${scheduler_policy_per_queue_name} 
        </ACTION>
        </COMMAND>

        <COMMAND
            name="weight"
            help="scheduer weight"
        >
        <PARAM
            name="weight"
            help="weight of DWRR"
            ptype="RANGE_1_100"
            >
        </PARAM>
        <ACTION builtin="clish_pyobj">sonic_cli_qos_scheduler patch_openconfig_qos_qos_scheduler_policies_scheduler_policy_schedulers_scheduler_config_weight ${top_scheduler_policy_name} ${scheduler_policy_per_queue_name} ${weight}
        </ACTION>
        </COMMAND>
        
        <COMMAND
            name="no weight"
            help="Delete weight"
        >
        <ACTION builtin="clish_pyobj">sonic_cli_qos_scheduler delete_openconfig_qos_qos_scheduler_policies_scheduler_policy_schedulers_scheduler_config_weight ${top_scheduler_policy_name} ${scheduler_policy_per_queue_name}
        </ACTION>
        </COMMAND>

        <COMMAND
            name="meter-type"
            help="scheduer meter type (packets/bytes)"
        >
        <PARAM
            name="meter_type"
            help="Configure scheduler type"
            ptype="SCHEDULER_METER_TYPE_OPTION"
            >
        </PARAM>
        <ACTION>
            python $SONIC_CLI_ROOT/sonic_cli_qos_scheduler.py patch_openconfig_qos_qos_scheduler_policies_scheduler_policy_schedulers_scheduler_config_meter_type ${top_scheduler_policy_name} ${scheduler_policy_per_queue_name} ${meter_type}
        </ACTION>
        </COMMAND>

        <COMMAND
            name="no meter-type"
            help="Delete meter-type"
        >
        <ACTION>
            python $SONIC_CLI_ROOT/sonic_cli_qos_scheduler.py delete_openconfig_qos_qos_scheduler_policies_scheduler_policy_schedulers_scheduler_config_meter_type ${top_scheduler_policy_name} ${scheduler_policy_per_queue_name}
        </ACTION>
        </COMMAND>

        <COMMAND
            name="cir"
            help="Committed Information Rate"
        >
        <PARAM
            name="cir"
            help="0 - 400000000"
            ptype="QUEUE_CIR_PIR"
            >
        </PARAM>
         <ACTION builtin="clish_pyobj">sonic_cli_qos_scheduler patch_openconfig_qos_qos_scheduler_policies_scheduler_policy_schedulers_scheduler_two_rate_three_color_config_cir ${top_scheduler_policy_name} ${scheduler_policy_per_queue_name} ${cir}
        </ACTION>
        </COMMAND>

        <COMMAND name="no cir" help="Committed Information Rate">
         <ACTION builtin="clish_pyobj">sonic_cli_qos_scheduler delete_openconfig_qos_qos_scheduler_policies_scheduler_policy_schedulers_scheduler_two_rate_three_color_config_cir ${top_scheduler_policy_name} ${scheduler_policy_per_queue_name}
        </ACTION>
        </COMMAND>

        <COMMAND
            name="cbs"
            help="Committed Burst Size"
        >
        <PARAM
            name="bc"
            help="Committed Burst Size"
            ptype="QUEUE_BURST"
            >
        </PARAM>
        <ACTION builtin="clish_pyobj">sonic_cli_qos_scheduler patch_openconfig_qos_qos_scheduler_policies_scheduler_policy_schedulers_scheduler_two_rate_three_color_config_bc ${top_scheduler_policy_name} ${scheduler_policy_per_queue_name} ${bc}
        </ACTION>
        </COMMAND>

        <COMMAND name="no cbs" help="delete Committed Burst Size">
        <ACTION builtin="clish_pyobj">sonic_cli_qos_scheduler delete_openconfig_qos_qos_scheduler_policies_scheduler_policy_schedulers_scheduler_two_rate_three_color_config_bc ${top_scheduler_policy_name} ${scheduler_policy_per_queue_name}
        </ACTION>
        </COMMAND>

        <COMMAND
            name="pir"
            help="Peak Information Rate"
        >
        <PARAM
            name="pir"
            help="0 - 400000000"
            ptype="QUEUE_CIR_PIR"
            >
        </PARAM>
        <ACTION builtin="clish_pyobj">sonic_cli_qos_scheduler patch_openconfig_qos_qos_scheduler_policies_scheduler_policy_schedulers_scheduler_two_rate_three_color_config_pir ${top_scheduler_policy_name} ${scheduler_policy_per_queue_name} ${pir}
        </ACTION>
        </COMMAND>

        <COMMAND
            name="no pir"
            help="Delete Peak Information Rate"
        >
        <ACTION builtin="clish_pyobj">sonic_cli_qos_scheduler delete_openconfig_qos_qos_scheduler_policies_scheduler_policy_schedulers_scheduler_two_rate_three_color_config_pir ${top_scheduler_policy_name} ${scheduler_policy_per_queue_name}
        </ACTION>
        </COMMAND>

        <COMMAND
            name="pbs"
            help="Peak Burst Size"
        >
        <PARAM
            name="be"
            help="Peak Burst Size"
            ptype="QUEUE_BURST"
            >
        </PARAM>
        <ACTION builtin="clish_pyobj">sonic_cli_qos_scheduler patch_openconfig_qos_qos_scheduler_policies_scheduler_policy_schedulers_scheduler_two_rate_three_color_config_be ${top_scheduler_policy_name} ${scheduler_policy_per_queue_name} ${be}
        </ACTION>
        </COMMAND>
        <COMMAND
            name="no pbs"
            help="Delete Peak Burst Size"
        >
        <ACTION builtin="clish_pyobj">sonic_cli_qos_scheduler delete_openconfig_qos_qos_scheduler_policies_scheduler_policy_schedulers_scheduler_two_rate_three_color_config_be ${top_scheduler_policy_name} ${scheduler_policy_per_queue_name}
        </ACTION>
        </COMMAND>

  </VIEW>
  <VIEW
    name="configure-qos-scheduler-policy-per-port-view"
    prompt="${SYSTEM_NAME}(conf-scheduler-${top_scheduler_policy_name}-port)# "
    depth="3"
    >
    <!-- Inheritance -->
    <NAMESPACE
        ref="configure-view"
        help="false"
        completion="false"
        />
    <COMMAND name="show configuration" help="show scheduler_policy port configuration" >
        <ACTION builtin="clish_pyobj">sonic_cli_show_config show_view views=configure-qos-scheduler-policy-per-port view_keys="name=${top_scheduler_policy_name}@255" </ACTION>
    </COMMAND>


        <COMMAND
            name="pir"
            help="Peak Information Rate in Kbps"
        >
        <PARAM
            name="pir"
            help="0 - 400000000 Kilo bits per second"
            ptype="CIR_PIR_KBPS"
            >
        </PARAM>
        <ACTION builtin="clish_pyobj">sonic_cli_qos_scheduler patch_openconfig_qos_qos_scheduler_policies_scheduler_policy_schedulers_scheduler_two_rate_three_color_config_pir ${top_scheduler_policy_name} 255 ${pir}
        </ACTION>
        </COMMAND>
        <COMMAND
            name="no pir"
            help="Delete Peak Information Rate"
        >
        <ACTION builtin="clish_pyobj">sonic_cli_qos_scheduler delete_openconfig_qos_qos_scheduler_policies_scheduler_policy_schedulers_scheduler_two_rate_three_color_config_pir ${top_scheduler_policy_name} 255
        </ACTION>
        </COMMAND>

        <COMMAND
            name="pbs"
            help="Peak Burst Size in bytes"
        >
        <PARAM
            name="pbs"
            help="Peak Burst Size in bytes"
            ptype="BURST"
            >
        </PARAM>
        <ACTION builtin="clish_pyobj">sonic_cli_qos_scheduler patch_openconfig_qos_qos_scheduler_policies_scheduler_policy_schedulers_scheduler_two_rate_three_color_config_be ${top_scheduler_policy_name} 255 ${pbs}
        </ACTION>
        </COMMAND>
        <COMMAND
            name="no pbs"
            help="Delete Peak Burst Size"
        >
        <ACTION builtin="clish_pyobj">sonic_cli_qos_scheduler delete_openconfig_qos_qos_scheduler_policies_scheduler_policy_schedulers_scheduler_two_rate_three_color_config_be ${top_scheduler_policy_name} 255
        </ACTION>
        </COMMAND>

  </VIEW>


  <VIEW name="enable-view">
    <COMMAND name="show qos scheduler-policy" help="Show scheduler policy information">
        <PARAM 
            name="name"
            help="Name of scheduler policy"
            ptype="STRING_32"
            optional="true"
            >
        </PARAM>
        <ACTION> if test "${name}" = "" ; then&#xA;
            python $SONIC_CLI_ROOT/sonic_cli_qos_scheduler.py get_openconfig_qos_qos_scheduler_policies show_qos_scheduler_policies.j2&#xA;
            else&#xA;
               python $SONIC_CLI_ROOT/sonic_cli_qos_scheduler.py get_openconfig_qos_qos_scheduler_policies_scheduler_policy_schedulers ${name} show_qos_scheduler.j2&#xA;
            fi
        </ACTION>
    </COMMAND>
  </VIEW>
 </CLISH_MODULE>
