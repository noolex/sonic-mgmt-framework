<CLISH_MODULE
    xmlns="http://www.dellemc.com/sonic/XMLSchema"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:xi="http://www.w3.org/2001/XInclude"
    xsi:schemaLocation="http://www.dellemc.com/sonic/XMLSchema
                        http://www.dellemc.com/sonic/XMLSchema/clish.xsd"
    >
    <VIEW name="enable-view">
        <!-- show ip mroute -->
        <COMMAND
            name="show ip mroute"
            help="Display IP multicast routes"
            ptype="SUBCOMMAND"
            mode="subcommand">
            <PARAM
                name="vrf"
                help="Display IP multicast routes of the given VRF"
                mode="subcommand"
                optional="true"
                ptype="SUBCOMMAND">
                <PARAM
                  name="vrf-name"
                  help="Display IP multicast routes of the given VRF"
                  mode="switch"
                  ptype="SUBCOMMAND">
                  <PARAM
                      name="vrf-name"
                      help="Name of VRF"
                      ptype="VRF_OR_DEFAULT">
                  </PARAM>
                  <PARAM
                      name="all"
                      help="All VRFs"
                      mode="subcommand"
                      ptype="SUBCOMMAND">
                  </PARAM>
                </PARAM>
             </PARAM>
             <PARAM
                name="filter"
                help="options: grp-addr, summary"
                mode="switch"
                optional="true"
                order="true"
                ptype="SUBCOMMAND">
                <PARAM
                    name="grp-addr"
                    help="IPv4 address of the group"
                    optional="true"
                    ptype="IP_ADDR">
                    <PARAM
                        name="src-addr"
                        help="IPv4 address of the source"
                        optional="true"
                        ptype="IP_ADDR">
                    </PARAM>
                </PARAM>
                <PARAM
                    name="summary"
                    help="Display IP multicast routes summary"
                    ptype="SUBCOMMAND"
                    mode="subcommand"
                    optional="true">
                </PARAM>
            </PARAM>
            <ACTION builtin="clish_pyobj">sonic_cli_mroute show_mroute vrf:${vrf-name} mroute:${mroute} summary:${summary} grpAddr:${grp-addr} srcAddr:${src-addr}</ACTION>
             <DOCGEN>
                 <DESCRIPTION>
                    This command displays multicast route information.
                </DESCRIPTION>

                <USAGE>
                   * show ip mroute [vrf {&lt;vrf-name&gt; | all}]
                   * show ip mroute [vrf {&lt;vrf-name&gt; | all}] summary
                </USAGE>

                <EXAMPLE summary="show ip mroute [vrf {&lt;vrf-name&gt; | all}]">
                    sonic# show ip mroute

                    IP multicast routing table for VRF: default
                    * -> indicates installed route

                      Source          Group           Input         Output        Uptime
                    * 71.0.0.11       233.0.0.1       Vlan100       Vlan200       00:41:59
                    * 71.0.0.22       233.0.0.1       Vlan100       Vlan200       00:41:54
                                                                    Vlan201       00:41:59
                    * 71.0.0.11       234.0.0.1       Vlan100       Vlan200       00:41:34
                    * 71.0.0.33       234.0.0.1       Vlan100       Vlan200       00:41:31
                                                                    Vlan201       00:41:44
                    * 71.0.0.22       235.0.0.1       Vlan100       Vlan200       00:41:16
                    * 71.0.0.33       235.0.0.1       Vlan100       Vlan200       00:41:14
                </EXAMPLE>
                <EXAMPLE summary="show ip mroute [vrf {&lt;vrf-name&gt; | all}] summary">
                    sonic# show ip mroute summary

                    IP multicast routing table summary for VRF: default
                    Mroute Type      Installed/Total
                    (S, G)           7/7
                </EXAMPLE>
             </DOCGEN>
        </COMMAND>

        <!-- ============== -->
        <!-- Clear commands -->
        <!-- ============== -->
        <COMMAND
            name="clear ip mroute"
            help="Clear IP Multicast routes">
            <PARAM
                name="vrf"
                help="Clear IP multicast routes of the given VRF"
                mode="subcommand"
                optional="true"
                ptype="SUBCOMMAND">
                <PARAM
                    name="vrf-name"
                    help="Name of VRF"
                    ptype="VRF_OR_DEFAULT">
                </PARAM>
            </PARAM>
            <ACTION builtin="clish_pyobj">sonic_cli_mroute clear_mroute vrf:${vrf-name} </ACTION>
            <DOCGEN>
                <DESCRIPTION>
                   This command is useful for debugging and resets multicast route information.
                </DESCRIPTION>

                <USAGE>
                   * clear ip mroute [vrf {&lt;vrf-name&gt; | all}] ==> To reset all IP Multicast routes for the particular VRF
                </USAGE>
                <EXAMPLE summary="clear ip mroute  [vrf {&lt;vrf-name&gt; | all}]">
                    sonic# clear ip mroute
                    sonic#
                </EXAMPLE>
             </DOCGEN>
        </COMMAND>
    </VIEW>
</CLISH_MODULE>
