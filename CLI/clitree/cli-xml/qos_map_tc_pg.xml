<CLISH_MODULE
    xmlns="http://www.dellemc.com/sonic/XMLSchema"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:xi="http://www.w3.org/2001/XInclude"
    xsi:schemaLocation="http://www.dellemc.com/sonic/XMLSchema
    http://www.dellemc.com/sonic/XMLSchema/clish.xsd"
    >
  <VIEW name="configure-view">
    <!-- maps -->
    <COMMAND
        name="qos map tc-pg"
        help="QoS TC-to-Priority-Group Map Configuration"
        mode="subcommand"
        ptype="SUBCOMMAND"
        view="configure-tc-pg-map-view"
        viewid="map_name=${name}"
        data_and_render_cb="qos_map_tc_pg_cb"
        >
        <PARAM
           name="name"
           help="Name of the map"
           ptype="STRING_32"
           >
        </PARAM>
        <ACTION builtin="clish_restcl">
            oper=PATCH
            url=/restconf/data/openconfig-qos:qos/openconfig-qos-maps-ext:forwarding-group-priority-group-maps
            body={"openconfig-qos-maps-ext:forwarding-group-priority-group-maps": {"forwarding-group-priority-group-map": [{"name": "${name}", "config": {"name": "${name}"}}]}}
        </ACTION>
        <DOCGEN>
          <DESCRIPTION>
            This command creates map to associates set of TC(Traffic Class)
            to queue. This map is used to assign a priority group to data packets on the 
            basis of the traffic class.
          </DESCRIPTION>
          <USAGE>
             Use this command to create Traffic class to Priority-Group entires map.
          </USAGE>
          <EXAMPLE summary="The following command creates Traffic class to Priority-Group entrie map.">
            sonic# configure terminal
            sonic(config)#qos map tc-pg tc-pg-map
          </EXAMPLE>
        </DOCGEN>
    </COMMAND>

    <!-- no maps -->
    <COMMAND name="no qos map tc-pg" help="Unconfigure a tc-pg map">
      <PARAM name="name" help="Name of the map" ptype="STRING_32"> </PARAM>
        <ACTION builtin="clish_restcl"> 
            oper=DELETE
            url=/restconf/data/openconfig-qos:qos/openconfig-qos-maps-ext:forwarding-group-priority-group-maps/forwarding-group-priority-group-map=${name}
        </ACTION>
        <DOCGEN>
          <DESCRIPTION>
            This command delete Traffic class to Priority-Group entires map.
          </DESCRIPTION>
          <USAGE>
             Use this command to delete Traffic class to Priority-Group entries map.
          </USAGE>
          <EXAMPLE summary="The following command delete Traffic class to Priority-Group entries map">
            sonic# configure terminal
            sonic(config)# no qos map tc-pg tc-pg-map
          </EXAMPLE>
        </DOCGEN>
    </COMMAND>
  </VIEW>

  <VIEW
    name="configure-tc-pg-map-view"
    prompt="${SYSTEM_NAME}(conf-tc-pg-map-${map_name})# "
    depth="2"
    >
    <!-- Inheritance -->
    <NAMESPACE
        ref="configure-view"
        help="false"
        completion="false"
        />

     <COMMAND name="show configuration" help="show tc-pg-map configuration">
      <ACTION builtin="clish_pyobj">sonic_cli_show_config show_view views=configure-tc-pg-map view_keys="name=${map_name}"</ACTION>
     </COMMAND>

     <COMMAND name="traffic-class" help="Traffic Class value" mode="subcommand" ptype="SUBCOMMAND" >
        <PARAM name="tc" help="Traffic-class value" ptype="RANGE_0_7" >
            <PARAM name="priority-group" help="Priority-Group id" mode="subcommand" ptype="SUBCOMMAND" >
                <PARAM name="pg" help="Priority-Group id" ptype="RANGE_0_7" >
                </PARAM>
            </PARAM>
        </PARAM>
        <ACTION builtin="clish_restcl">
            oper=PATCH
            url=/restconf/data/openconfig-qos:qos/openconfig-qos-maps-ext:forwarding-group-priority-group-maps/forwarding-group-priority-group-map=${map_name}/forwarding-group-priority-group-map-entries/
            body={"openconfig-qos-maps-ext:forwarding-group-priority-group-map-entries": {"forwarding-group-priority-group-map-entry": [{"fwd-group":"${tc}", "config": {"priority-group-index": ${pg}}}]}}
        </ACTION>
        <DOCGEN>
          <DESCRIPTION>
            This command to add Traffic class to Priority-Group entry in map.
          </DESCRIPTION>
          <USAGE>
             Use this command to add entry to map Traffic class to Priority-Group.
          </USAGE>
          <EXAMPLE summary="The following command add entry to map Traffic class to Priority-Group">
            sonic# configure terminal
            sonic(config)# traffic-class 0 priority-group 0
            sonic(config)# traffic-class 2 priority-group 0
            sonic(config)# traffic-class 1 priority-group 2
          </EXAMPLE>
        </DOCGEN>

      </COMMAND>

      <!-- no tc-->
      <COMMAND name="no traffic-class" help="Unconfigure a mapping">
        <PARAM name="tc" help="TC value (0-7)" ptype="RANGE_0_7" >
        </PARAM>
        <ACTION builtin="clish_restcl">
            oper=DELETE
            url=/restconf/data/openconfig-qos:qos/openconfig-qos-maps-ext:forwarding-group-priority-group-maps/forwarding-group-priority-group-map=${map_name}/forwarding-group-priority-group-map-entries/forwarding-group-priority-group-map-entry=${tc}
        </ACTION>
        <DOCGEN>
          <DESCRIPTION>
            This command to delete Traffic class to Priority-Group entry in map.
          </DESCRIPTION>
          <USAGE>
             Use this command to delete entry to map Traffic class to Priority-Group.
          </USAGE>
          <EXAMPLE summary="The following command delete entry to map Traffic class to Priority-Group">
            sonic# configure terminal
            sonic(config)# no traffic-class 1
            sonic(config)# no traffic-class 2
            sonic(config)# no traffic-class 3
          </EXAMPLE>
        </DOCGEN>
      </COMMAND>
  </VIEW>


  <VIEW name="enable-view">

    <!--show forwarding-group-priority-group-map -->
    <COMMAND name="show qos map tc-pg" help="Show configured traffic-class-priority-group-map">
      <PARAM name="name" help="Name of the traffic-class-priority-group-map" ptype="STRING_32" optional="true"> </PARAM>
      <ACTION>
          if test "${name}" = "" ; then&#xA;
               python $SONIC_CLI_ROOT/sonic_cli_qos_map.py get_openconfig_qos_maps_ext_qos_tc_pg_maps show_qos_map_tc_pg.j2&#xA;
          else&#xA;
               python $SONIC_CLI_ROOT/sonic_cli_qos_map.py get_openconfig_qos_maps_ext_qos_tc_pg_maps_tc_pg_map ${name} show_qos_map_tc_pg.j2&#xA;
          fi&#xA;
      </ACTION>
    </COMMAND>
  </VIEW>

 </CLISH_MODULE>
