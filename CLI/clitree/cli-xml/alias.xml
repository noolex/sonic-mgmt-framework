<CLISH_MODULE
    xmlns="http://www.dellemc.com/sonic/XMLSchema"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:xi="http://www.w3.org/2001/XInclude"
    xsi:schemaLocation="http://www.dellemc.com/sonic/XMLSchema
    http://www.dellemc.com/sonic/XMLSchema/clish.xsd"
    >

    <VIEW
       name="configure-view"
       >
     <COMMAND
        name="interface-naming"
        help="Interface naming"
        >
        <PARAM 
            name="standard" 
            help="Enable interface naming standard mode" 
            ptype="SUBCOMMAND" 
            mode="subcommand"
            >
        </PARAM>
     <ACTION builtin="clish_restcl">oper=PATCH url=/restconf/data/sonic-device-metadata:sonic-device-metadata/DEVICE_METADATA/DEVICE_METADATA_LIST=localhost/intf_naming_mode body={"sonic-device-metadata:intf_naming_mode": "alias"}</ACTION>
     </COMMAND>

     <COMMAND
        name="no interface-naming"
        help="Interface naming"
        >
        <PARAM 
            name="standard" 
            help="Disable interface naming standard mode" 
            ptype="SUBCOMMAND" 
            mode="subcommand"
            >
        </PARAM>
        <ACTION builtin="clish_restcl">oper=DELETE url=/restconf/data/sonic-device-metadata:sonic-device-metadata/DEVICE_METADATA/DEVICE_METADATA_LIST=localhost/intf_naming_mode</ACTION>
     </COMMAND>

   </VIEW>

  <VIEW name="enable-view">
    <COMMAND name="show interface-naming" help="Show interface naming mode">
      <ACTION> python $SONIC_CLI_ROOT/sonic-cli-alias.py get_sonic_device_metadata_sonic_device_metadata_device_metadata_device_metadata_list_intf_naming_mode alias.j2 ${__full_line} </ACTION>
    </COMMAND>
  </VIEW>
</CLISH_MODULE>


