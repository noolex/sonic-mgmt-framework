<?xml version="1.0"?>

<!DOCTYPE CLISH_MODULE [
]>

<CLISH_MODULE xmlns="http://www.dellemc.com/sonic/XMLSchema"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:xi="http://www.w3.org/2001/XInclude"
    xsi:schemaLocation="http://www.dellemc.com/sonic/XMLSchema
                        http://www.dellemc.com/sonic/XMLSchema/clish.xsd">

<!-- show commands -->
<!-- show ip igmp snooping [[ vlan ] vlan-id ] -->
<!-- show ip igmp snooping groups [[vlan] vlan-id] -->

<VIEW name="enable-view">
    <COMMAND
        name="show ip igmp"
        help="Show Internet Group Management Protocol (IGMP)">
        <PARAM
            name="snooping"
            help="Displays IGMP snooping configurations"
            ptype="SUBCOMMAND"
            mode="subcommand"
        >        
            <PARAM
            name="vlan"
            help="Displays IGMP snooping configurations for VLAN"
            ptype="SUBCOMMAND"
            mode="subcommand"
						optional="true"
        		>
			        <PARAM
			            name="vlan-id"
			            help=""
			            ptype="VLAN_ID"
							/>
					 </PARAM>
					 
	        <PARAM
	            name="groups"
	            help="Displays IGMP snooping multicast table"
	            ptype="SUBCOMMAND"
	            mode="subcommand"
	            optional="true"
	         >
	            <PARAM
	            name="vlan"
	            help="Displays IGMP snooping multicast table for VLAN"
	            ptype="SUBCOMMAND"
	            mode="subcommand"
							optional="true"
	        		>
				        <PARAM
				            name="vlan-id"
				            help=""
				            ptype="VLAN_ID"
								/>
						 </PARAM>
					</PARAM>					 
			</PARAM>
            <ACTION builtin="clish_pyobj">sonic_cli_igmp_snooping get_igmp_snooping_interfaces_interface_state show_igmp_snooping.j2 ${__params}</ACTION>
            <DOCGEN>
                <DESCRIPTION>
                    Show IGMP snooping configuration across all the VLANs or specified VLAN Or
                    Show IGMP snooping groups learnt across all VLANs or specified VLAN
                </DESCRIPTION>
                <USAGE>
                    sonic# show ip igmp snooping
                    sonic# show ip igmp snooping groups
                </USAGE>
                <EXAMPLE summary="show IGMP Snooping information ">
                    sonic# show ip igmp snooping
                    Vlan ID: 100
                    Querier: Disabled
                    IGMP Operation mode: IGMPv1
                    Is Fast-Leave Enabled: Disabled
                    Query interval: 125
                    Last Member Query Interval: 1000
                    Max Response time: 10

                    Vlan ID: 200
                    Querier: Enabled
                    IGMP Operation mode: IGMPv2
                    Is Fast-Leave Enabled: Disabled
                    Query interval: 125
                    Last Member Query Interval: 1000
                    Max Response time: 10

                    Vlan ID: 300
                    Querier: Enabled
                    IGMP Operation mode: IGMPv3
                    Is Fast-Leave Enabled: Disabled
                    Query interval: 20
                    Last Member Query Interval: 1000
                    Max Response time: 10

                    
                    sonic# show ip igmp snooping vlan 200
                    Vlan ID: 200
                    Querier: Enabled
                    IGMP Operation mode: IGMPv2
                    Is Fast-Leave Enabled: Disabled
                    Query interval: 125
                    Last Member Query Interval: 1000
                    Max Response time: 10

                </EXAMPLE>
                
                <EXAMPLE summary="show IGMP Snooping group information ">
                    sonic# show ip igmp snooping groups 
                    Vlan ID: 100
                    -----------
                    1 (*, 225.1.1.1)
                      Outgoing Ports: Ethernet4,PortChannel3
                    2 (*, 225.1.1.2)
                      Outgoing Ports: Ethernet8
                    Total number of entries: 2

                    Vlan ID : 300
                    -------------
                    1 (100.10.2.3, 226.0.0.1 )
                      Outgoing Ports: Ethernet8,Portchannel2
                    Total number of entries: 1


                    sonic# show ip igmp snooping groups vlan 100
                    Vlan ID: 100
                    -----------
                    1 (*, 225.1.1.1)
                      Outgoing Ports: Ethernet4, PortChannel3
                    2 (*, 225.1.1.2)
                      Outgoing Ports: Ethernet8
                    Total number of entries: 2

                </EXAMPLE>
            </DOCGEN>
    </COMMAND>
</VIEW>

<!--config commands: MODE : interface vlan -->
<VIEW name="configure-vlan-view">
    <COMMAND
        name="ip igmp"
        command_tables="sonic-igmp:sonic-igmp/IGMP_INTERFACE_QUERY/IGMP_INTERFACE_QUERY_LIST/interface-id={name}"
        dbpath="sonic-igmp:sonic-igmp/IGMP_INTERFACE_QUERY/IGMP_INTERFACE_QUERY_LIST/enabled"
        help="Enable IGMP operation">
        <ACTION builtin="clish_pyobj">sonic_cli_if patch_openconfig_if_ip_enable_igmp ${vlan_name} True</ACTION>
    </COMMAND>

    <COMMAND name = "ip igmp snooping" 
             help="Enables IGMP snooping"
             command_tables="sonic-igmp-snooping:sonic-igmp-snooping/CFG_L2MC_TABLE/CFG_L2MC_TABLE_LIST/vlan-name={name};sonic-igmp-snooping:sonic-igmp-snooping/CFG_L2MC_MROUTER_TABLE/CFG_L2MC_MROUTER_TABLE_LIST/mrouter-intf={mrtr-intf};sonic-igmp-snooping:sonic-igmp-snooping/CFG_L2MC_STATIC_MEMBER_TABLE/CFG_L2MC_STATIC_MEMBER_TABLE_LIST/vlan-name={name},group-addr={group-addr},source-addr={source-addr},out-intf={out-intf}"
             render_command_cb='igmp_snooping_config'
             ptype="SUBCOMMAND"
             mode="subcommand"
             >
							<PARAM
							    name="snooping-options"
                                help=""
							    ptype="SUBCOMMAND"
							    mode="switch"
							    optional = "true"
							    >
							    
				                <PARAM
                                    name="querier"
				                    help="Enables IGMP snooping querier"
				                    ptype="SUBCOMMAND"
                                    mode="subcommand"
                                    >
												</PARAM>							    
				
				                <PARAM
                                    name="fast-leave"
				                    help="Enables IGMP fast leave processing"
				                    ptype="SUBCOMMAND"
				                    mode="subcommand"
				                   >
			  								</PARAM>
				
				                <PARAM
				                    name="query-interval"
				                    help="Configures IGMP query interval"
                                    ptype="SUBCOMMAND"
                                    mode="subcommand"
				                   >
				                   <PARAM
                                       name="query-interval-val"
															ptype="IGMP_QUERY_INTERVAL"
															help="Query interval value (Default: 125 s)"
					                   	/>
												</PARAM>
				
				                <PARAM
				                    name="last-member-query-interval"
				                    help="Configures IGMP last member query interval"
				                    ptype="SUBCOMMAND"
				                    mode="subcommand"
				                    >
													  <PARAM
							                 name="last-mem-query-interval-val"	                    
															 ptype="IGMP_LAST_MEM_QUERY_INTERVAL"
														 	 help="Last member query interval value (Default: 1000 ms)"
				                    />
												</PARAM>
				
				                <PARAM
				                    name="query-max-response-time"
				                    help="Configures IGMP max query response time"
				                    ptype="SUBCOMMAND"
				                    mode="subcommand"
				                   >
				                   <PARAM
					                    name="query-max-response-val"	                    
															ptype="IGMP_MAX_QUERY_RESPONSE"
															help="Query reponse time (Default: 10 s)"
					                   	/>
												</PARAM>

											<PARAM
				                    name="version"
				                    help="Configures IGMP snooping version"
				                    ptype="SUBCOMMAND"
				                    mode="subcommand"
				                   >
				                   <PARAM
                                       name="igmps-version-val"
															ptype="IGMP_SNOOPING_VERSION"
															help="IGMP version 1 or 2 or 3 (Default: 2)"
					                 />
											</PARAM>
				
			                <PARAM
			                    name="mrouter"
			                    help="Configures multicast router port"
			                    ptype="SUBCOMMAND"
                                mode="subcommand"
                                >

                                <PARAM
					                    name="interface"
					                    help="Interface to use"
					                    ptype="SUBCOMMAND"
					                    mode="subcommand"
					               >
					               <PARAM 
					               			name="mrouter-if-name" 
                                            help="Interface name" 
					               			ptype="STRING"
												/>							             			
										   </PARAM>										   				
										</PARAM>
										
		                <PARAM
		                    name="static-group"
		                    help="Configures multicast static group"
		                    ptype="SUBCOMMAND"
		                    mode="subcommand"
		                   >
							         <PARAM
				               			name="group-addr" 
                                        help="Multicast address to be joined"
				               			ptype="IP_ADDR"							             			
				               >
										         <PARAM
							                    name="interface"
							                    help="Interface to use"
							                    ptype="SUBCOMMAND"
							                    mode="subcommand"
							               >
									               <PARAM 
									               			name="grp-if-name" 
                                                            help="Interface name"
									               			ptype="STRING"
																 />							             			
												   </PARAM>										   				
				              </PARAM>
									</PARAM>										
							</PARAM>					
                <ACTION builtin="clish_pyobj">sonic_cli_igmp_snooping patch_igmp_snooping_interfaces_interface_config ${vlan_name} ${__params}</ACTION>
                <DOCGEN>
                    <DESCRIPTION>
                        Commands to configure or unconfigure IGMP snooping parameters on a VLAN
                    </DESCRIPTION>
                    <EXAMPLE summary="Enable IGMP Snooping on VLAN">
                        sonic(config)# interface Vlan 200
                        sonic(conf-if-Vlan200)# ip igmp snooping
                    </EXAMPLE>
                    <EXAMPLE summary="Disable IGMP Snooping on VLAN">
                        sonic(config)# interface Vlan 200
                        sonic(conf-if-Vlan200)# no ip igmp snooping
                    </EXAMPLE>
                    <EXAMPLE summary="Enable IGMP querier on VLAN, by default querier is disabled">
                        sonic(config)# interface Vlan 200
                        sonic(conf-if-Vlan200)# ip igmp snooping querier
                    </EXAMPLE>
                    <EXAMPLE summary="Disable IGMP querier on VLAN">
                        sonic(config)# interface Vlan 200
                        sonic(conf-if-Vlan200)# no ip igmp snooping querier
                    </EXAMPLE>
                    <EXAMPLE summary="Enable IGMP fast-leave on VLAN, by default fast-leave is disabled">
                        sonic(config)# interface Vlan 200
                        sonic(conf-if-Vlan200)# ip igmp snooping fast-leave
                    </EXAMPLE>
                    <EXAMPLE summary="Disable IGMP fast-leave on VLAN">
                        sonic(config)# interface Vlan 200
                        sonic(conf-if-Vlan200)# no ip igmp snooping fast-leave
                    </EXAMPLE>
                    <EXAMPLE summary="Configure IGMP query-interval, default interval is 125 seconds, range is from 1 to 18000 seconds">
                        sonic(config)# interface Vlan 200
                        sonic(conf-if-Vlan200)# ip igmp snooping query-interval 20
                    </EXAMPLE>
                    <EXAMPLE summary="Unconfigure non-default IGMP query-interval configured, value set to default interval 125 seconds">
                        sonic(config)# interface Vlan 200
                        sonic(conf-if-Vlan200)# no ip igmp snooping query-interval
                    </EXAMPLE>
                    <EXAMPLE summary="Configure last member query interval, default is 1000ms, the valid range is from 100ms to 25500ms">
                        sonic(config)# interface Vlan 200
                        sonic(conf-if-Vlan200)# ip igmp snooping last-member-query-interval 2000
                    </EXAMPLE>
                    <EXAMPLE summary="Unconfigure non-default last member query interval configured, value set to default 1s">
                        sonic(config)# interface Vlan 200
                        sonic(conf-if-Vlan200)# no ip igmp snooping last-member-query-interval
                    </EXAMPLE>
                    <EXAMPLE summary="Configure max response interval, default is 10s, the valid range is from 1 to 25s">
                        sonic(config)# interface Vlan 200
                        sonic(conf-if-Vlan200)# ip igmp snooping query-max-response-time 12
                    </EXAMPLE>
                    <EXAMPLE summary="Unconfigure non-default max response interval configured, value set to default 10s">
                        sonic(config)# interface Vlan 200
                        sonic(conf-if-Vlan200)# no ip igmp snooping query-max-response-time
                    </EXAMPLE>
                    <EXAMPLE summary="Configure IGMP version, default is Version2, the valid range is from 1 to 3">
                        sonic(config)# interface Vlan 200
                        sonic(conf-if-Vlan200)# ip igmp snooping version 3
                    </EXAMPLE>
                    <EXAMPLE summary="Unconfigure non-default IGMP version configured, value set to default Version2">
                        sonic(config)# interface Vlan 200
                        sonic(conf-if-Vlan200)# no ip igmp snooping version
                    </EXAMPLE>
                    <EXAMPLE summary="Configure static multicast router(mrouter) port">
                        sonic(config)# interface Vlan 200
                        sonic(conf-if-Vlan200)# ip igmp snooping mrouter interface Ethernet4
                    </EXAMPLE>
                    <EXAMPLE summary="Unconfigure static multicast router(mrouter) port">
                        sonic(config)# interface Vlan 200
                        sonic(conf-if-Vlan200)# no ip igmp snooping mrouter interface Ethernet4
                    </EXAMPLE>
                    <EXAMPLE summary="Configure static multicast group">
                        sonic(config)# interface Vlan 200
                        sonic(conf-if-Vlan200)# ip igmp snooping static-group 225.0.0.1 interface PortChannel2
                    </EXAMPLE>
                    <EXAMPLE summary="Unconfigure static multicast group">
                        sonic(config)# interface Vlan 200
                        sonic(conf-if-Vlan200)#no ip igmp snooping static-group 225.0.0.1 interface PortChannel2
                    </EXAMPLE>
                </DOCGEN>
    </COMMAND>
    
    <COMMAND
        name="no ip igmp"
        help="Disable IGMP operation">
        <ACTION builtin="clish_pyobj">sonic_cli_if patch_openconfig_if_ip_disable_igmp ${vlan_name}</ACTION>
    </COMMAND>
    <COMMAND name = "no ip igmp snooping" 
             help="Disables IGMP snooping"
             ptype="SUBCOMMAND"
             mode="subcommand">

							<PARAM
							    name="snooping-options"
							    help=""
							    ptype="SUBCOMMAND"
							    mode="switch"
							    optional = "true"
							    >
							    
				                <PARAM
				                    name="querier"
				                    help="Disables IGMP snooping querier"
				                    ptype="SUBCOMMAND"
				                    mode="subcommand"
				                   >
												</PARAM>							    
				
				                <PARAM
				                    name="fast-leave"
				                    help="Disables fast leave processing"
				                    ptype="SUBCOMMAND"
				                    mode="subcommand"
				                   >
			  								</PARAM>
				
				                <PARAM
				                    name="query-interval"
				                    help="Unconfigures IGMP query interval"
				                    ptype="SUBCOMMAND"
				                    mode="subcommand"
				                   />
				
				                <PARAM
				                    name="last-member-query-interval"
				                    help="Unconfigures IGMP last member query interval"
				                    ptype="SUBCOMMAND"
				                    mode="subcommand"
				                    />
				
				                <PARAM
				                    name="query-max-response-time"
				                    help="Unconfigures IGMP max query response time"
				                    ptype="SUBCOMMAND"
				                    mode="subcommand"
				                   />

											<PARAM
				                    name="version"
				                    help="Unconfigures IGMP snooping version"
				                    ptype="SUBCOMMAND"
				                    mode="subcommand"
				                   />
				
			                <PARAM
			                    name="mrouter"
			                    help="Unconfigures multicast router port"
			                    ptype="SUBCOMMAND"
			                    mode="subcommand"
			                   >
								         <PARAM
					                    name="interface"
					                    help="Interface to use"
					                    ptype="SUBCOMMAND"
					                    mode="subcommand"
					               >
							               <PARAM 
							               			name="mrouter-if-name" 
							               			help="Interface name" 
							               			ptype="STRING"
														 />							             			
										     </PARAM>
										  </PARAM>
										  
		                <PARAM
		                    name="static-group"
		                    help="Unconfigures multicast static group"
		                    ptype="SUBCOMMAND"
		                    mode="subcommand"
		                   >
							         <PARAM
				               			name="group-addr" 
				               			help="Multicast address to be joined" 
				               			ptype="IP_ADDR"							             			
				               >
										         <PARAM
							                    name="interface"
							                    help="Interface to use"
							                    ptype="SUBCOMMAND"
							                    mode="subcommand"
							               >
									               <PARAM 
									               			name="grp-if-name" 
									               			help="Interface name" 
									               			ptype="STRING"
																 />							             			
												   </PARAM>										   				
				              </PARAM>
									</PARAM>
						</PARAM>					
        <ACTION builtin="clish_pyobj">sonic_cli_igmp_snooping delete_igmp_snooping_interfaces_interface_config ${vlan_name} ${__params}</ACTION>
    </COMMAND>        
</VIEW>
</CLISH_MODULE>
