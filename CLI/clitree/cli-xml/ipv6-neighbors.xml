<!DOCTYPE CLISH_MODULE [
]>

<CLISH_MODULE xmlns="http://www.dellemc.com/sonic/XMLSchema"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:xi="http://www.w3.org/2001/XInclude"
    xsi:schemaLocation="http://www.dellemc.com/sonic/XMLSchema
                        http://www.dellemc.com/sonic/XMLSchema/clish.xsd">


<!--=======================================================-->
<!--           show/clear ipv6 neighbors changes           -->
<!--=======================================================-->

<VIEW name="enable-view">

<!-- show ipv6 neighbors <ip-addr> commands -->
    <COMMAND
        help="Show NDP commands"
        name="show ipv6 neighbors">

        <PARAM
            name="vrf"
            help="Show NDP entries of the given VRF"
            mode="subcommand"
            optional="true"
            ptype="SUBCOMMAND">
            <PARAM
              name="vrf-name"
              help="Show NDP entries of the given VRF"
              mode="switch"
              ptype="SUBCOMMAND">
              <PARAM
                  name="vrf-name"
                  help="Show NDP entries of the given VRF"
                  ptype="VRF_NAME">
              </PARAM>
              <PARAM
                  name="mgmt"
                  help="Show NDP entries of the management VRF"
                  mode="subcommand"
                  ptype="SUBCOMMAND">
              </PARAM>
            </PARAM>
        </PARAM>

        <PARAM
            name="filter"
            help="Filtering parameter 'ip' or 'mac-address'"
            optional="true"
            mode="switch"
            order="true"
            ptype="SUBCOMMAND">
                <PARAM
                    help="NDP entry for this IPv6 address"
                    name="ip-addr"
                    ptype="IPV6_ADDR"
                    optional="true">
                </PARAM>
                <PARAM
                    name="mac-address"
                    help="HW address"
                    ptype="SUBCOMMAND"
                    mode="subcommand"
                    optional="true">
                    <PARAM
                        help="48 bit MAC address"
                        name="mac-addr"
                        ptype="MAC_ADDR">
                    </PARAM>
                </PARAM>
                <PARAM
                     name="summary"
                     help="Summary of NDP entries"
                     ptype="SUBCOMMAND"
                     mode="subcommand"
                     optional="true">
                </PARAM>
        </PARAM>
        <ACTION>
          	python $SONIC_CLI_ROOT/sonic-cli-neighbors.py get_sonic_neigh_sonic_neigh_neigh_table family:IPv6 ip:${ip-addr} mac:${mac-addr} vrf:${vrf-name} summary:${summary}&#xA;
       </ACTION>
       <DOCGEN>
            <DESCRIPTION>
                This command displays NDP table entries. To filter the
                output, specify an interface, port channel, or VLAN, an IPv6 address, a MAC
                address, or a combination of more than one value to match.  You can also
                display total number of ARP entries using 'summary' option.
            </DESCRIPTION>

            <USAGE>
                sonic# show ipv6 neighbors [interface { Ethernet &lt; port &gt; [summary] | PortChannel &lt; id &gt; [summary] | Vlan &lt; id &gt; [summary] }] [&lt; ipv6-address &gt;] [mac-address &lt; mac &gt;] [summary]
            </USAGE>

            <EXAMPLE summary="show ipv6 neighbors information">
                sonic# show ipv6 neighbors
                ---------------------------------------------------------------------------------
                Address                     Hardware address    Interface        Egress Interface
                ---------------------------------------------------------------------------------
                20::1                       00:01:02:03:44:55   Ethernet8         -
                20::2                       00:01:02:03:ab:cd   PortChannel200    -
                20::3                       00:01:02:03:04:05   Vlan100           Ethernet4
                fe80::e6f0:4ff:fe79:34c7    00:01:e8:8b:44:71   eth0              -
            </EXAMPLE>

             <EXAMPLE summary="show ipv6 neighbors interface information">
                sonic# show ipv6 neighbors Vlan 100
                ---------------------------------------------------------------------------------
                Address                     Hardware address    Interface        Egress Interface
                ---------------------------------------------------------------------------------
                20::3                       00:01:02:03:04:05   Vlan100           Ethernet4

                sonic# show ipv6 neighbors interface Management 0
                ---------------------------------------------------------------------------------
                Address                     Hardware address    Interface        Egress Interface
                ---------------------------------------------------------------------------------
                fe80::e6f0:4ff:fe79:34c7    00:01:e8:8b:44:71   eth0              -
            </EXAMPLE>

            <EXAMPLE summary="show ipv6 neighbors ip information">
                sonic# show ipv6 neighbors 20::2
                ---------------------------------------------------------------------------------
                Address                     Hardware address    Interface        Egress Interface
                ---------------------------------------------------------------------------------
                20::2                       00:01:02:03:ab:cd   PortChannel200    -
            </EXAMPLE>

            <EXAMPLE summary="show ipv6 neighbors mac-address information">
                sonic# show ipv6 neighbors mac-address 00:01:02:03:04:05
                ---------------------------------------------------------------------------------
                Address                     Hardware address    Interface        Egress Interface
                ---------------------------------------------------------------------------------
                20::3                       00:01:02:03:04:05   Vlan100           Ethernet4
            </EXAMPLE>
        </DOCGEN>
    </COMMAND>

<!-- show ipv6 neighbors interface <intf> [summary] -->
    <COMMAND
        help="NDP entries for this interface"
        name="show ipv6 neighbors interface">
        <PARAM
            name="iftype"
            help="interface type"
            mode="switch"
            ptype="SUBCOMMAND">
            <PARAM
                name="Ethernet"
                help="Select an interface"
                mode="subcommand"
                ptype="SUBCOMMAND">
                <PARAM
                    name="phy-if-name"
                    help="Physical interface"
                    ptype="UINT">
                    <PARAM
                        help="Summary of NDP entries"
                        name="summary"
                        ptype="SUBCOMMAND"
                        mode="subcommand"
                        optional="true">
                    </PARAM>
                </PARAM>
            </PARAM>
            <PARAM
                name="Loopback"
                help="Loopback Interface Configuration"
                mode="subcommand"
                ptype="SUBCOMMAND">
                <PARAM
                    name="lo-id"
                    help="Loopback identifier"
                    ptype="LO_ID">
                    <PARAM
                        help="Summary of NDP entries"
                        name="summary"
                        ptype="SUBCOMMAND"
                        mode="subcommand"
                        optional="true">
                    </PARAM>
                </PARAM>
            </PARAM>
            <PARAM
                name="Management"
                help="Management Interface commands"
                mode="subcommand"
                ptype="SUBCOMMAND">
                <PARAM
                    name="mgmt-if-id"
                    help="Management interface"
                    ptype="MGMT_INTF_ID">
                    <PARAM
                        help="Summary of NDP entries"
                        name="summary"
                        ptype="SUBCOMMAND"
                        mode="subcommand"
                        optional="true">
                    </PARAM>
                </PARAM>
            </PARAM>
            <PARAM
                name="PortChannel"
                help="Port channel Interface Configuration"
                mode="subcommand"
                ptype="SUBCOMMAND">
                <PARAM
                    name="lag-id"
                    help="PortChannel identifier"
                    ptype="LAG_ID">
                    <PARAM
                        help="Summary of NDP entries"
                        name="summary"
                        ptype="SUBCOMMAND"
                        mode="subcommand"
                        optional="true">
                    </PARAM>
                </PARAM>
            </PARAM>
            <PARAM
                name="Vlan"
                help="Vlan Interface Configuration"
                mode="subcommand"
                ptype="SUBCOMMAND">
                <PARAM
                    name="vlan-id"
                    help="Vlan identifier"
                    ptype="VLAN_ID">
                    <PARAM
                        help="Summary of NDP entries"
                        name="summary"
                        ptype="SUBCOMMAND"
                        mode="subcommand"
                        optional="true">
                    </PARAM>
                </PARAM>
            </PARAM>
            <PARAM
                name="Vxlan"
                help="VXLAN Configuration mode"
                mode="subcommand"
                ptype="SUBCOMMAND">
                <PARAM
                    name="vxlan-if-name"
                    help="VTEP Name"
                    ptype="STRING_63">
                    <PARAM
                        help="Summary of NDP entries"
                        name="summary"
                        ptype="SUBCOMMAND"
                        mode="subcommand"
                        optional="true">
                    </PARAM>
                </PARAM>
          </PARAM>
        </PARAM>
        <ACTION>
            if test "${iftype}" = "Ethernet"; then&#xA;
                python $SONIC_CLI_ROOT/sonic-cli-neighbors.py get_openconfig_if_ip_interfaces_interface_subinterfaces_subinterface_ipv6_neighbors intf:${iftype}${phy-if-name} summary:${summary}&#xA;
            fi&#xA;
            if test "${iftype}" = "Loopback"; then&#xA;
                python $SONIC_CLI_ROOT/sonic-cli-neighbors.py get_openconfig_if_ip_interfaces_interface_subinterfaces_subinterface_ipv6_neighbors intf:${iftype}${lo-id} summary:${summary}&#xA;
            fi&#xA;
            if test "${iftype}" = "Management"; then&#xA;
                python $SONIC_CLI_ROOT/sonic-cli-neighbors.py get_openconfig_if_ip_interfaces_interface_subinterfaces_subinterface_ipv6_neighbors intf:eth${mgmt-if-id} summary:${summary}&#xA;
            fi&#xA;
            if test "${iftype}" = "PortChannel"; then&#xA;
                python $SONIC_CLI_ROOT/sonic-cli-neighbors.py get_openconfig_if_ip_interfaces_interface_subinterfaces_subinterface_ipv6_neighbors intf:${iftype}${lag-id} summary:${summary}&#xA;
            fi&#xA;
            if test "${iftype}" = "Vlan"; then&#xA;
                python $SONIC_CLI_ROOT/sonic-cli-neighbors.py get_openconfig_if_ip_interfaces_interface_subinterfaces_subinterface_ipv6_neighbors intf:${iftype}${vlan-id} summary:${summary}&#xA;
            fi&#xA;
            if test "${iftype}" = "Vxlan"; then&#xA;
                python $SONIC_CLI_ROOT/sonic-cli-neighbors.py get_openconfig_if_ip_interfaces_interface_subinterfaces_subinterface_ipv6_neighbors intf:${iftype}${vxlan-if-name} summary:${summary}&#xA;
            fi&#xA;
        </ACTION>
    </COMMAND>

<!-- clear ipv6 neighbors -->
    <COMMAND
        help="clear IP commands"
        name="clear ipv6"
        >
    </COMMAND>

<!-- clear ipv6 neighbors interface <intf> -->
    <COMMAND
        help="clear NDP entries for this interface"
        name="clear ipv6 neighbors interface">
        <PARAM
            name="if-type"
            help=""
            ptype="INTF_TYPE">
            <PARAM
                name="if-id"
                help="Numeric ID for the given interface type"
                ptype="UINT">
            </PARAM>
        </PARAM>
        <ACTION>
            python $SONIC_CLI_ROOT/sonic-cli-neighbors.py rpc_sonic_clear_neighbors family:IPv6 intf:${if-type}${if-id}&#xA;
        </ACTION>
    </COMMAND>

<!-- clear ipv6 neighbors <ip> -->
    <COMMAND
        help="clear NDP commands"
        name="clear ipv6 neighbors">
        <PARAM
            name="clearneighbors-subcommands"
            help="clear neighbors subcommands"
            mode="switch"
            ptype="SUBCOMMAND"
            optional="true">
                <PARAM
                    name="ip-addr"
                    help="IP address for which NDP record needs to be deleted"
                    ptype="IPV6_ADDR"
                    optional="true">
                </PARAM>
        </PARAM>

        <PARAM
            name="vrf"
            help="Clear NDP entries of the given VRF"
            mode="subcommand"
            optional="true"
            ptype="SUBCOMMAND">
            <PARAM
              name="vrf-name"
              help="Clear NDP entries of the given VRF"
              mode="switch"
              ptype="SUBCOMMAND">
              <PARAM
                  name="vrf-name"
                  help="Clear NDP entries of the given VRF"
                  ptype="VRF_NAME">
              </PARAM>
              <PARAM
                  name="mgmt"
                  help="Clear NDP entries of the management VRF"
                  mode="subcommand"
                  ptype="SUBCOMMAND">
              </PARAM>
            </PARAM>
        </PARAM>

       <ACTION>
            python $SONIC_CLI_ROOT/sonic-cli-neighbors.py rpc_sonic_clear_neighbors family:IPv6 ip:${ip-addr} vrf:${vrf-name}&#xA;
       </ACTION>
       <DOCGEN>
            <DESCRIPTION>
                To delete dynamically learned IPv6 entries from the NDP table, use the 'clear ipv6 neighbor' command.
                To specify the entries to be deleted, enter an interface, port channel, or VLAN, an IPv6 address, or a combination to match.
                Use the 'show ipv6 neighbors' to verify that the IPv6 entries have been deleted.
            </DESCRIPTION>

            <USAGE>
                sonic# clear ipv6 neighbors [interface {Ethernet &lt; port-number &gt;| PortChannel &lt; number &gt;| Vlan &lt; vlan-id &gt;| Management &lt; port-number &gt;}] [&lt; ipv6-address &gt;]
            </USAGE>

            <EXAMPLE summary="clear ipv6 neighbors information">
                sonic# show ipv6 neighbors
                ---------------------------------------------------------------------------------
                Address                     Hardware address    Interface        Egress Interface
                ---------------------------------------------------------------------------------
                20::1                       00:01:02:03:44:55   Ethernet8         -
                20::2                       00:01:02:03:ab:cd   PortChannel200    -
                20::3                       00:01:02:03:04:05   Vlan100           Ethernet4
                fe80::e6f0:4ff:fe79:34c7    00:01:e8:8b:44:71   eth0              -
                sonic# clear ipv6 neighbors
                sonic# show ipv6 neighbors
             </EXAMPLE>

            <EXAMPLE summary="clear ipv6 neighbors interface information">
                sonic# show ipv6 neighbors
                ---------------------------------------------------------------------------------
                Address                     Hardware address    Interface        Egress Interface
                ---------------------------------------------------------------------------------
                20::1                       00:01:02:03:44:55   Ethernet8         -
                20::2                       00:01:02:03:ab:cd   PortChannel200    -
                20::3                       00:01:02:03:04:05   Vlan100           Ethernet4
                fe80::e6f0:4ff:fe79:34c7    00:01:e8:8b:44:71   eth0              -
                sonic# clear ipv6 neighbors interface Vlan 100
                sonic# show ipv6 neighbors
                ---------------------------------------------------------------------------------
                Address                     Hardware address    Interface        Egress Interface
                ---------------------------------------------------------------------------------
                20::1                       00:01:02:03:44:55   Ethernet8         -
                20::2                       00:01:02:03:ab:cd   PortChannel200    -
                fe80::e6f0:4ff:fe79:34c7    00:01:e8:8b:44:71   eth0              -
            </EXAMPLE>

            <EXAMPLE summary="clear ipv6 neighbors ip information">
                sonic# show ipv6 neighbors
                ---------------------------------------------------------------------------------
                Address                     Hardware address    Interface        Egress Interface
                ---------------------------------------------------------------------------------
                20::1                       00:01:02:03:44:55   Ethernet8         -
                20::2                       00:01:02:03:ab:cd   PortChannel200    -
                20::3                       00:01:02:03:04:05   Vlan100           Ethernet4
                fe80::e6f0:4ff:fe79:34c7    00:01:e8:8b:44:71   eth0              -
                sonic# clear ipv6 neighbors fe80::e6f0:4ff:fe79:34c7
                sonic# show ipv6 neighbors
                ---------------------------------------------------------------------------------
                Address                     Hardware address    Interface        Egress Interface
                ---------------------------------------------------------------------------------
                20::1                       00:01:02:03:44:55   Ethernet8         -
                20::2                       00:01:02:03:ab:cd   PortChannel200    -
                20::3                       00:01:02:03:04:05   Vlan100           Ethernet4
            </EXAMPLE>
        </DOCGEN>
    </COMMAND>
</VIEW>

<VIEW name="configure-view">
	<!-- ipv6 nd cache expire -->
	<COMMAND name="ipv6 nd" help="Configure IPv6 ND" ptype="SUBCOMMAND" mode="subcommand">
		<PARAM name="cache" help="Set IPv6 ND cache entry" ptype="SUBCOMMAND" mode="subcommand">
			<PARAM name="expire" help="Set IPv6 ND cache entry expiry time" ptype="SUBCOMMAND" mode="subcommand">
				<PARAM name="value" help="Expiry time in seconds" ptype="NEIGH_TIMEOUT"> </PARAM>
			</PARAM>
		</PARAM>

		<ACTION>python $SONIC_CLI_ROOT/sonic-cli-neighbors.py set_ipv6_nd_cache_expiry ${value}&#xA; </ACTION>

		<DOCGEN>
			<DESCRIPTION>
				Configures time in seconds for IPv6 ND cache entry to expire.
			</DESCRIPTION>
			<USAGE>
				Use this command to configure IPv6 ND cache entry timeout.
			</USAGE>
			<EXAMPLE summary="Configure IPv6 ND timeout">
				sonic-cli(config)# ipv6 nd cache expire 500 
			</EXAMPLE>
		</DOCGEN>
	</COMMAND>

	<!-- no ipv6 nd cache expire -->
	<COMMAND name="no ipv6 nd" help="Unconfigure IPv6 ND" ptype="SUBCOMMAND" mode="subcommand">
		<PARAM name="cache" help="Unset IPv6 ND cache entry" ptype="SUBCOMMAND" mode="subcommand">
			<PARAM name="expire" help="Unset IPv6 ND cache entry expiry time" ptype="SUBCOMMAND" mode="subcommand"> </PARAM>
		</PARAM>

		<ACTION>python $SONIC_CLI_ROOT/sonic-cli-neighbors.py del_ipv6_nd_cache_expiry &#xA; </ACTION>

		<DOCGEN>
			<DESCRIPTION>
				Unconfigures IPv6 ND cache entry expiry time and sets it to Default Value.
			</DESCRIPTION>
			<USAGE>
				Use this command to Unconfigure IPv6 ND cache entry timeout.
			</USAGE>
			<EXAMPLE summary="Unconfigure IPv6 ND timeout">
				sonic-cli(config)# no ipv6 nd cache expire
			</EXAMPLE>
		</DOCGEN>
	</COMMAND>
</VIEW>
</CLISH_MODULE>
