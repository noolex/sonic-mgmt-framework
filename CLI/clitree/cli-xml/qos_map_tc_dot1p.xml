<CLISH_MODULE
    xmlns="http://www.dellemc.com/sonic/XMLSchema"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:xi="http://www.w3.org/2001/XInclude"
    xsi:schemaLocation="http://www.dellemc.com/sonic/XMLSchema
    http://www.dellemc.com/sonic/XMLSchema/clish.xsd"
    >
  <VIEW name="configure-view">
    <!-- maps -->
    <COMMAND
        name="qos map tc-dot1p"
        help="QoS TC-to-DOT1P Map Configuration"
        mode="subcommand"
        ptype="SUBCOMMAND"
        view="configure-tc-dot1p-map-view"
        viewid="map_name=${name}"
        data_and_render_cb="qos_map_tc_dot1p_cb"
        >
        <PARAM
           name="name"
           help="Name of the map"
           ptype="STRING_32"
           >
        </PARAM>
        <ACTION builtin="clish_restcl">
            oper=PATCH
            url=/restconf/data/openconfig-qos:qos/openconfig-qos-maps-ext:forwarding-group-dot1p-maps/forwarding-group-dot1p-map=${name}
            body={"openconfig-qos-maps-ext:forwarding-group-dot1p-map": [{"name": "${name}"}]}
        </ACTION>
        <DOCGEN>
          <DESCRIPTION>
            This command creates map to associates set of TC(Traffic Class) to
            DOT1P(Vlan PCP value).
            This map is used to Remark the DOT1P field in egress packets
            on the basis of the internal Traffic Class.
          </DESCRIPTION>
          <USAGE>
             Use this command to create Traffic class to DOT1P entries map.
          </USAGE>
          <EXAMPLE summary="The following command creates Traffic class to DOT1P entries map.">
            sonic# configure terminal
            sonic(config)# qos map tc-dot1p tc_dot1p
          </EXAMPLE>
        </DOCGEN>
    </COMMAND>

    <!-- no maps -->
    <COMMAND name="no qos map tc-dot1p" help="Unconfigure a tc-dot1p map">
      <PARAM name="name" help="Name of the map" ptype="STRING_32"> </PARAM>
        <ACTION builtin="clish_restcl"> 
            oper=DELETE
            url=/restconf/data/openconfig-qos:qos/openconfig-qos-maps-ext:forwarding-group-dot1p-maps/forwarding-group-dot1p-map=${name}
        </ACTION>
        <DOCGEN>
          <DESCRIPTION>
            This command delete Traffic class to DOT1P entires map.
          </DESCRIPTION>
          <USAGE>
             Use this command to delete Traffic class to DOT1P entries map.
          </USAGE>
          <EXAMPLE summary="The following command deletes Traffic class to DOT1P entries map">
            sonic# configure terminal
            sonic(config)# no qos map tc-dot1p
          </EXAMPLE>
        </DOCGEN>
    </COMMAND>
  </VIEW>

  <VIEW
    name="configure-tc-dot1p-map-view"
    prompt="${SYSTEM_NAME}(conf-tc-dot1p-map-${map_name})# "
    depth="2"
    >
    <!-- Inheritance -->
    <NAMESPACE
        ref="configure-view"
        help="false"
        completion="false"
        />

     <COMMAND name="show configuration" help="show tc-dot1p-map configuration">
      <ACTION builtin="clish_pyobj">sonic_cli_show_config show_view views=configure-tc-dot1p-map view_keys="name=${map_name}"</ACTION>
     </COMMAND>

     <COMMAND name="traffic-class" help="Internal Traffic Class (TC)" mode="subcommand" ptype="SUBCOMMAND" >
         <PARAM name="tc" help="Traffic-class value" ptype="RANGE_0_7" >
            <PARAM name="dot1p" help="DOT1P" mode="subcommand" ptype="SUBCOMMAND" >
                <PARAM name="dot1p-val" help="DOT1P value (0-7)" ptype="RANGE_0_7" >
                </PARAM>
            </PARAM>
        </PARAM>
        <ACTION builtin="clish_restcl">
            oper=PATCH
            url=/restconf/data/openconfig-qos:qos/openconfig-qos-maps-ext:forwarding-group-dot1p-maps/forwarding-group-dot1p-map=${map_name}/forwarding-group-dot1p-map-entries/forwarding-group-dot1p-map-entry="${tc}"
            body={"openconfig-qos-maps-ext:forwarding-group-dot1p-map-entry": [{"fwd-group":"${tc}", "config": {"dot1p": ${dot1p-val}}}]}
        </ACTION>
        <DOCGEN>
          <DESCRIPTION>
            This command to add Traffic class to DOT1P entry in map.
          </DESCRIPTION>
          <USAGE>
             Use this command to add entry to Traffic class to DOT1P map.
          </USAGE>
          <EXAMPLE summary="The following command add entry to Traffic class to DOT1P map">
            sonic# configure terminal
            sonic(config)# qos map tc-dot1p tc_dot1p
            sonic(conf-tc-dot1p-map-tc_dot1p)# traffic-class 0 dot1p 0
            sonic(conf-tc-dot1p-map-tc_dot1p)# traffic-class 1 dot1p 1
            sonic(conf-tc-dot1p-map-tc_dot1p)# traffic-class 3 dot1p 2
          </EXAMPLE>
        </DOCGEN>

      </COMMAND>

      <!-- no dot1p-->
      <COMMAND name="no traffic-class" help="Unconfigure a mapping">
        <PARAM name="tc" help="TC value (0-7)" ptype="RANGE_0_7" >
        </PARAM>
        <ACTION builtin="clish_restcl">
            oper=DELETE
            url=/restconf/data/openconfig-qos:qos/openconfig-qos-maps-ext:forwarding-group-dot1p-maps/forwarding-group-dot1p-map=${map_name}/forwarding-group-dot1p-map-entries/forwarding-group-dot1p-map-entry="${tc}"
        </ACTION>
        <DOCGEN>
          <DESCRIPTION>
            This command to delete Traffic class to DOT1P entry in map.
          </DESCRIPTION>
          <USAGE>
             Use this command to delete entry from Traffic class to DOT1P map.
          </USAGE>
          <EXAMPLE summary="The following command deletes entry from Traffic class to DOT1P map">
            sonic# configure terminal
            sonic(config)# qos map tc-dot1p tc_dot1p
            sonic(conf-tc-dot1p-map-tc_dot1p)# no traffic-class 0
            sonic(conf-tc-dot1p-map-tc_dot1p)# no traffic-class 1
            sonic(conf-tc-dot1p-map-tc_dot1p)# no traffic-class 3
          </EXAMPLE>
        </DOCGEN>
      </COMMAND>
  </VIEW>


  <VIEW name="enable-view">

    <!--show dot1p-map -->
    <COMMAND name="show qos map tc-dot1p" help="Show configured tc-dot1p-map">
      <PARAM name="name" help="Name of the tc-dot1p-map" ptype="STRING_32" optional="true"> </PARAM>
      <ACTION>
          if test "${name}" = "" ; then&#xA;
               python $SONIC_CLI_ROOT/sonic_cli_qos_map.py get_openconfig_qos_maps_ext_qos_forwarding_group_dot1p_maps show_qos_map_tc_dot1p.j2&#xA;
          else&#xA;
               python $SONIC_CLI_ROOT/sonic_cli_qos_map.py get_openconfig_qos_maps_ext_qos_forwarding_group_dot1p_maps_forwarding_group_dot1p_map ${name} show_qos_map_tc_dot1p.j2&#xA;
          fi&#xA;
      </ACTION>
    </COMMAND>
  </VIEW>

 </CLISH_MODULE>
