<CLISH_MODULE
    xmlns="http://www.dellemc.com/sonic/XMLSchema"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:xi="http://www.w3.org/2001/XInclude"
    xsi:schemaLocation="http://www.dellemc.com/sonic/XMLSchema
                        http://www.dellemc.com/sonic/XMLSchema/clish.xsd"
    >
<!--=========================================================================-->
  <PTYPE
     name="TACACS_AUTH_PORT"
     method="integer"
     pattern="1..65535"
     help="port"
  />
<!--=========================================================================-->
  <PTYPE
     name="TACACS_TIMEOUT"
     method="integer"
     pattern="1..60"
     help="seconds"
  />
<!--=======================================================-->
  <PTYPE
     name="TACACS_KEY"
     pattern="(^(([^ #,]){1,65})$)"
     help="(Valid Chars: ASCII printable except SPACE, #, and COMMA, Max Len: 65) shared secret"
  />
<!--=======================================================-->
  <PTYPE
     name="TACACS_PRIORITY"
     method="integer"
     pattern="1..64"
     help="(1..64)"
  />
<!--=======================================================-->
  <PTYPE
     name="AAA_AUTH_TYPE"
     method="select"
     pattern="pap(pap) chap(chap) mschap(mschap) login(login)"
     help=""
  />
<!--=======================================================-->

  <VIEW name="enable-view">
    <COMMAND name="show tacacs-server" 
             help="Show TACACS info"/>
    <COMMAND name="show tacacs-server global" 
             help="Show TACACS global configuration" 
             mode="subcommand" 
             ptype="SUBCOMMAND">
      <ACTION builtin="clish_pyobj">sonic_cli_tacacs get_sonic_tacacs_global show_tacacs_global.j2</ACTION>
    </COMMAND>
    <COMMAND name="show tacacs-server host" 
             help="Show TACACS server configuration" 
             mode="subcommand" 
             ptype="SUBCOMMAND">
      <PARAM name="address" 
             help="Hostname or IP address of TACACS+ server"       
             ptype="STRING"
             optional="true"> 
      </PARAM>
      <ACTION builtin="clish_pyobj">sonic_cli_tacacs get_sonic_tacacs_server address=${address} show_tacacs_server.j2</ACTION>
    </COMMAND>
  </VIEW>

  <VIEW name="configure-view">
    <!-- tacacs -->
    <COMMAND name="tacacs-server"
             help="TACACS server configuration"/>

    <!-- tacacs src-intf -->
    <COMMAND name="tacacs-server source-interface"
             help="Configure source interface to pick the source IP, used for the TACACS+ packets"
             ptype="SUBCOMMAND"
             mode="subcommand">
        <PARAM name="iftype" help="interface type" mode="switch" ptype="SUBCOMMAND">
          <PARAM name="Ethernet" help="Ethernet interface" ptype="PHY_INTERFACE" mode="subcommand"/>
          <PARAM name="Loopback" help="Loopback interface" ptype="LOOPBACK_INTERFACE" mode="subcommand"/>
          <PARAM name="Management" help="Management interface" ptype="MGMT_INTERFACE" mode="subcommand"/>
          <PARAM name="PortChannel" help="PortChannel interface" ptype="PO_INTERFACE" mode="subcommand"/>
          <PARAM name="Vlan" help="Vlan interface" ptype="VLAN_INTERFACE" mode="subcommand"/>
        </PARAM>
          <ACTION builtin="clish_pyobj">sonic_cli_tacacs patch_sonic_tacacs_global_src_intf ${Ethernet} ${Loopback} ${Management} ${PortChannel} ${Vlan} ${instance} </ACTION>
    </COMMAND>

    <!-- tacacs timeout -->
    <COMMAND name="tacacs-server timeout"
             help="Configure global timeout for TACACS"
             ptype="SUBCOMMAND"
             mode="subcommand">
      <PARAM name="timeout"
             help="timeout (default: 5)"
             ptype="TACACS_TIMEOUT">
      </PARAM>
      <ACTION
          builtin="clish_restcl">oper=PATCH url=/restconf/data/openconfig-system:system/aaa/server-groups/server-group=TACACS/config/openconfig-system-ext:timeout body={"openconfig-system-ext:timeout": ${timeout}}
      </ACTION>
    </COMMAND>

    <!-- tacacs authtype -->
    <COMMAND name="tacacs-server auth-type"
             help="Configure global authentication type for TACACS"
             ptype="SUBCOMMAND"
             mode="subcommand">
      <PARAM name="auth-type"
             help="Authentication type (default: pap)"
             ptype="AAA_AUTH_TYPE">
      </PARAM>
      <ACTION
          builtin="clish_restcl">oper=PATCH url=/restconf/data/openconfig-system:system/aaa/server-groups/server-group=TACACS/config/openconfig-system-ext:auth-type body={"openconfig-system-ext:auth-type": "${auth-type}"}
      </ACTION>
    </COMMAND>

    <!-- tacacs secret-key -->
    <COMMAND name="tacacs-server key"
             help="Configure global shared secret for TACACS"
             ptype="SUBCOMMAND"
             mode="subcommand">
      <PARAM name="secret-key"
             help=""
             ptype="TACACS_KEY">
      </PARAM>
      <ACTION
          builtin="clish_restcl">oper=PATCH url=/restconf/data/openconfig-system:system/aaa/server-groups/server-group=TACACS/config/openconfig-system-ext:secret-key body={ "openconfig-system-ext:secret-key": "${secret-key}"}
      </ACTION>
    </COMMAND>

    <!-- tacacs server -->
    <COMMAND name="tacacs-server host"
             help="Configure a server for TACACS"
             ptype="SUBCOMMAND"
             mode="subcommand">
      <PARAM name="host"
             help="Hostname or IP address of TACACS+ server"       
             ptype="STRING">
      </PARAM>

      <PARAM name="port"
             help="server port"
             ptype="SUBCOMMAND"
             mode="subcommand"
             optional="true">
        <PARAM name="port-val"
               help="server Port"
               ptype="TACACS_AUTH_PORT">
        </PARAM>
      </PARAM>

      <PARAM name="timeout"
             help="server timeout"
             ptype="SUBCOMMAND"
             mode="subcommand"
             optional="true">
        <PARAM name="timeout-val"
               help="server timeout"
               ptype="TACACS_TIMEOUT">
        </PARAM>
      </PARAM>

      <PARAM name="key"
             help="server key"
             ptype="SUBCOMMAND"
             mode="subcommand"
             optional="true">
        <PARAM name="key-val"
               help="server key"
               ptype="TACACS_KEY">
        </PARAM>
      </PARAM>

      <PARAM name="type"
             help="server authentication type"
             ptype="SUBCOMMAND"
             mode="subcommand"
             optional="true">
        <PARAM name="type-val"
               help="server authentication type"
               ptype="AAA_AUTH_TYPE">
        </PARAM>
      </PARAM>

      <PARAM name="priority"
             help="Server priority"
             ptype="SUBCOMMAND"
             mode="subcommand"
             optional="true">
        <PARAM name="priority-val"
               help="Server priority"
               ptype="TACACS_PRIORITY">
        </PARAM>
      </PARAM>

      <PARAM name="vrf"
             help="Management VRF"
             ptype="SUBCOMMAND"
             mode="subcommand"
             optional="true">
        <PARAM
                name="vrf-switch"
                help="VRF commands"
                mode="switch"
                ptype="SUBCOMMAND">
          <PARAM name="mgmt"
                 help="Management VRF name"
                 ptype="SUBCOMMAND"
                 mode="subcommand">
          </PARAM>
          <PARAM name="default"
                 help="default VRF name"
                 ptype="SUBCOMMAND"
                 mode="subcommand">
          </PARAM>
        </PARAM>
      </PARAM>

      <ACTION builtin="clish_pyobj">sonic_cli_tacacs patch_tacacs_server ${host} port:${port-val} key:${key-val} timeout:${timeout-val} authtype:${type-val} priority:${priority-val} vrf:${mgmt}${default}</ACTION>
    </COMMAND>

    <!-- no tacacs server -->
    <COMMAND name="no tacacs-server" 
             help="Unconfigure TACACS server Configuration"/>
    <COMMAND name="no tacacs-server host"
             help="Unconfigure TACACS server"
             ptype="SUBCOMMAND"
             mode="subcommand">
      <PARAM name="address"
             help="Hostname or IP address of TACACS+ server"       
             ptype="STRING">
      </PARAM>
      <ACTION
          builtin="clish_restcl">oper=DELETE url=/restconf/data/openconfig-system:system/aaa/server-groups/server-group=TACACS/servers/server=${address}/tacacs/config
      </ACTION>
    </COMMAND>

    <COMMAND name="no tacacs-server source-interface"
             help="Unconfigure global source interface for TACACS">
      <ACTION
          builtin="clish_restcl">oper=DELETE url=/restconf/data/openconfig-system:system/aaa/server-groups/server-group=TACACS/config/openconfig-system-ext:source-interface
      </ACTION>
    </COMMAND>

    <COMMAND name="no tacacs-server timeout"
             help="Unconfigure global timeout for TACACS">
      <ACTION
          builtin="clish_restcl">oper=PATCH url=/restconf/data/openconfig-system:system/aaa/server-groups/server-group=TACACS/config/openconfig-system-ext:timeout body={"openconfig-system-ext:timeout": 5}
      </ACTION>
    </COMMAND>

    <COMMAND name="no tacacs-server auth-type"
             help="Unconfigure global auth-type for TACACS">
      <ACTION
          builtin="clish_restcl">oper=PATCH url=/restconf/data/openconfig-system:system/aaa/server-groups/server-group=TACACS/config/openconfig-system-ext:auth-type body={"openconfig-system-ext:auth-type": "pap"}
      </ACTION>
    </COMMAND>

    <COMMAND name="no tacacs-server key"
             help="Unconfigure global shared secret for TACACS">
      <ACTION
          builtin="clish_restcl">oper=DELETE url=/restconf/data/openconfig-system:system/aaa/server-groups/server-group=TACACS/config/openconfig-system-ext:secret-key
      </ACTION>
    </COMMAND>

  </VIEW>

</CLISH_MODULE>
