<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE CLISH_MODULE [
]>
<CLISH_MODULE xmlns="http://www.dellemc.com/sonic/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xi="http://www.w3.org/2001/XInclude" xsi:schemaLocation="http://www.dellemc.com/sonic/XMLSchema http://www.dellemc.com/sonic/XMLSchema/clish.xsd">
    <VIEW name="enable-view">
        <!--show storm-control -->
        <COMMAND name="show storm-control" help="Storm-control information">
            <ACTION> 
                python $SONIC_CLI_ROOT/sonic-cli-storm-control.py get_list_sonic_storm_control_sonic_storm_control_port_storm_control_port_storm_control_list show_storm_control.j2
            </ACTION>
            <xi:include href="include/pipe.xml"/>
        </COMMAND>
        <COMMAND name="show storm-control interface" help="show storm-control interface">
        </COMMAND>
        <COMMAND name="show storm-control interface Ethernet" help="Storm-control interface information">
            <PARAM name="phy-if-id" help="Physical interface" ptype="UINT"> </PARAM>
            <ACTION> 
                python $SONIC_CLI_ROOT/sonic-cli-storm-control.py get_list_sonic_storm_control_sonic_storm_control_port_storm_control_port_storm_control_list show_storm_control.j2 interface Ethernet${phy-if-id}&#xA;
            </ACTION>
            <xi:include href="include/pipe.xml"/>

        </COMMAND>
    </VIEW>
    <VIEW name="configure-if-view">
        <COMMAND name="storm-control" help="configure storm-control"/>
        <COMMAND name="storm-control broadcast" help="configure storm-control">
            <PARAM name="kbps" help="kbps value" ptype="RL_RATE_TYPE"> </PARAM>
            <ACTION> 
                python $SONIC_CLI_ROOT/sonic-cli-storm-control.py patch_list_sonic_storm_control_sonic_storm_control_port_storm_control_port_storm_control_list ${iface} "broadcast" ${kbps}
            </ACTION>
        </COMMAND>
        <COMMAND name="storm-control unknown-unicast" help="configure storm-control">
            <PARAM name="kbps" help="kbps value" ptype="RL_RATE_TYPE"> </PARAM>
            <ACTION> 
                python $SONIC_CLI_ROOT/sonic-cli-storm-control.py patch_list_sonic_storm_control_sonic_storm_control_port_storm_control_port_storm_control_list ${iface} "unknown-unicast" ${kbps}
            </ACTION>
        </COMMAND>
        <COMMAND name="storm-control unknown-multicast" help="configure storm-control">
            <PARAM name="kbps" help="kbps value" ptype="RL_RATE_TYPE"> </PARAM>
            <ACTION> 
                python $SONIC_CLI_ROOT/sonic-cli-storm-control.py patch_list_sonic_storm_control_sonic_storm_control_port_storm_control_port_storm_control_list ${iface} "unknown-multicast" ${kbps}
            </ACTION>
        </COMMAND>

        <!-- no storm-control -->
        <COMMAND name="no storm-control" help="configure storm-control"/>
        <COMMAND name="no storm-control broadcast" help="configure storm-control">
            <ACTION> 
                python $SONIC_CLI_ROOT/sonic-cli-storm-control.py delete_sonic_storm_control_sonic_storm_control_port_storm_control_port_storm_control_list ${iface} "broadcast" 
            </ACTION>
        </COMMAND>
        <COMMAND name="no storm-control unknown-unicast" help="configure storm-control">
            <ACTION> 
                python $SONIC_CLI_ROOT/sonic-cli-storm-control.py delete_sonic_storm_control_sonic_storm_control_port_storm_control_port_storm_control_list ${iface} "unknown-unicast" 
            </ACTION>
        </COMMAND>
        <COMMAND name="no storm-control unknown-multicast" help="configure storm-control">
            <ACTION> 
                python $SONIC_CLI_ROOT/sonic-cli-storm-control.py delete_sonic_storm_control_sonic_storm_control_port_storm_control_port_storm_control_list ${iface} "unknown-multicast" 
            </ACTION>
        </COMMAND>
    </VIEW>
</CLISH_MODULE>
