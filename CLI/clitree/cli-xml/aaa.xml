<CLISH_MODULE
    xmlns="http://www.dellemc.com/sonic/XMLSchema"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:xi="http://www.w3.org/2001/XInclude"
    xsi:schemaLocation="http://www.dellemc.com/sonic/XMLSchema
                        http://www.dellemc.com/sonic/XMLSchema/clish.xsd"
    >
<!--=========================================================================-->
  <PTYPE
     name="AAA_AUTH_LDAP"
     method="select"
     pattern="ldap(ldap)"
     help=""
     />
<!--=========================================================================-->
  <PTYPE
     name="AAA_AUTH_TACPLUS"
     method="select"
     pattern="tacacs+(tacacs+)"
     help=""
     />
<!--=========================================================================-->
  <PTYPE
     name="AAA_AUTH_RADIUS"
     method="select"
     pattern="radius(radius)"
     help=""
     />
  <!--=========================================================================-->
  <PTYPE
     name="AAA_AUTH_LOCAL"
     method="select"
     pattern="local(local)"
     help=""
     />
  <!--=========================================================================-->
  <PTYPE
     name="AAA_NSS_LOGIN"
     method="select"
     pattern="login(login)"
     help=""
     />
  <!--=========================================================================-->

  <VIEW name="enable-view">
    <COMMAND name="show aaa"
             help="Show AAA info">
      <ACTION builtin="clish_pyobj">sonic_cli_aaa get_openconfig_system_system_aaa show_aaa.j2</ACTION>
    </COMMAND>
  </VIEW>

  <VIEW name="configure-view">
    <!-- aaa -->
    <COMMAND name="aaa"
             data_and_render_cb="aaa_config"
             help="AAA configuration"/>

    <!-- config sub view for aaa authentication -->
    <COMMAND name="aaa authentication"
             help="Configure AAA authentication"/>

    <COMMAND name="aaa authentication failthrough"
             help="Configure AAA authentication failthrough status"
             mode="subcommand"
             ptype="SUBCOMMAND">
      <PARAM name="enable"
             help="failthrough status"
             ptype="ENA_DISA">
      </PARAM>
      <ACTION builtin="clish_pyobj">sonic_cli_aaa patch_openconfig_system_ext_system_aaa_authentication_config_failthrough ${enable}</ACTION>
      <DOCGEN>
        <DESCRIPTION>Configures AAA authentication failthrough</DESCRIPTION>
        <EXAMPLE>
          sonic(config)# aaa authentication failthrough enable
        </EXAMPLE>
      </DOCGEN>
    </COMMAND>

    <COMMAND name="aaa authentication login-method"
             help="AAA authentication login method preference"
             mode="subcommand"
             hidden="true"
             ptype="SUBCOMMAND">
      <PARAM name="login"
             help="Login methods"
             mode="switch"
             ptype="SUBCOMMAND">
          <PARAM name="local"
                 help="Local authentication"
                 optional="true"
                 mode="subcommand"
                 ptype="SUBCOMMAND">
              <PARAM name="tacacs+"
                     test='"${radius}"!="radius"'
                     help="TACACS+ authentication"
                     optional="true"
                     ptype="AAA_AUTH_TACPLUS">
              </PARAM>
              <PARAM name="radius"
                     test='"${tacacs+}"!="tacacs+"'
                     help="radius authentication"
                     optional="true"
                     ptype="AAA_AUTH_RADIUS">
              </PARAM>
          </PARAM>
          <PARAM name="tacacs+"
                 help="TACACS+ authentication"
                 optional="true"
                 mode="subcommand"
                 ptype="SUBCOMMAND">
              <PARAM name="local"
                     help="Local authentication"
                     optional="true"
                     ptype="AAA_AUTH_LOCAL">
              </PARAM>
          </PARAM>
          <PARAM name="radius"
                 help="radius authentication"
                 optional="true"
                 mode="subcommand"
                 ptype="SUBCOMMAND">
              <PARAM name="local"
                     help="Local authentication"
                     optional="true"
                     ptype="AAA_AUTH_LOCAL">
              </PARAM>
          </PARAM>
      </PARAM>
      <ACTION builtin="clish_pyobj">sonic_cli_aaa patch_openconfig_system_system_aaa_authentication_config_authentication_method ${login} ${local} ${tacacs+} ${radius} </ACTION>
    </COMMAND>
    <COMMAND name="no aaa"
             help="Unconfigure AAA"/>
    <COMMAND name="no aaa authentication"
             help="Unconfigure AAA authentication"/>
    <COMMAND name="no aaa authentication login-method"
             help="Unconfigure aaa authentication login method"
             hidden="true">
      <ACTION
          builtin="clish_restcl">oper=DELETE url=/restconf/data/openconfig-system:system/aaa/authentication/config/authentication-method
      </ACTION>
    </COMMAND>

    <COMMAND name="aaa authentication login"
             help="Configure AAA login authentication"/>

    <COMMAND name="aaa authentication login default"
             help="Configure AAA login authentication default list"
             mode="subcommannd"
             ptype="SUBCOMMAND">
      <PARAM name="login"
             help="Select authentication method"
             mode="switch"
             ptype="SUBCOMMAND">
        <PARAM name="group"
               help="Select group"
               optional="true"
               mode="subcommand"
               ptype="SUBCOMMAND">
            <PARAM name="remote"
                     help="Select remote method group"
                     mode="switch"
                     ptype="SUBCOMMAND">
            <PARAM name="ldap"
                   test='"${tacacs+}"!="tacacs+" -a "${radius}"!="radius"'
                   help="Select group of all LDAP servers"
                   optional="true"
                   mode="subcommand"
                   ptype="SUBCOMMAND">
                <PARAM name="local"
                       help="Select local authentication"
                       optional="true"
                       mode="subcommand"
                       ptype="SUBCOMMAND">
                </PARAM>
            </PARAM>
            <PARAM name="radius"
                   help="Select group of all RADIUS servers"
                   test='"${tacacs+}"!="tacacs+" -a "${ldap}"!="ldap"'
                   optional="true"
                   mode="subcommand"
                   ptype="SUBCOMMAND">
                <PARAM name="local"
                       help="Select local authentication"
                       optional="true"
                       mode="subcommand"
                       ptype="SUBCOMMAND">
                </PARAM>
            </PARAM>
            <PARAM name="tacacs+"
                   test='"${radius}"!="radius" -a "${ldap}"!="ldap"'
                   help="Select group of all TACACS+ servers"
                   optional="true"
                   mode="subcommand"
                   ptype="SUBCOMMAND">
                <PARAM name="local"
                       help="Select local authentication"
                       optional="true"
                       mode="subcommand"
                       ptype="SUBCOMMAND">
                </PARAM>
            </PARAM>
            </PARAM>
        </PARAM>
        <PARAM name="local"
               help="Select local authentication"
               optional="true"
               mode="subcommand"
               ptype="SUBCOMMAND">
            <PARAM name="group"
                   help="Select group"
                   optional="true"
                   mode="subcommand"
                   ptype="SUBCOMMAND">
              <PARAM name="remote"
                     help="Select remote method group"
                     mode="switch"
                     ptype="SUBCOMMAND">
                <PARAM name="ldap"
                       test='"${tacacs+}"!="tacacs+" -a "${radius}"!="radius"'
                       help="Select group of all LDAP servers"
                       optional="true"
                       mode="subcommand"
                       ptype="SUBCOMMAND">
                </PARAM>
                <PARAM name="radius"
                       test='"${tacacs+}"!="tacacs+" -a "${ldap}"!="ldap"'
                       help="Select group of all RADIUS servers"
                       optional="true"
                       mode="subcommand"
                       ptype="SUBCOMMAND">
                </PARAM>
                <PARAM name="tacacs+"
                       test='"${radius}"!="radius" -a "${ldap}"!="ldap"'
                       help="Selects group of all TACACS+ servers"
                       optional="true"
                       mode="subcommand"
                       ptype="SUBCOMMAND">
                </PARAM>
              </PARAM>
            </PARAM>
        </PARAM>
      </PARAM>

      <ACTION builtin="clish_pyobj">sonic_cli_aaa patch_openconfig_system_system_aaa_authentication_config_login ${__params} </ACTION>
      <DOCGEN>
        <DESCRIPTION>Configures AAA login authentication default list to authentication first with tacacs+, and, if none respond, (or failthrough is configured) with local next</DESCRIPTION>
        <EXAMPLE>
          sonic(config)# aaa authentication login default group tacacs+ local
        </EXAMPLE>
      </DOCGEN>
    </COMMAND>

    <COMMAND name="aaa authorization"
             help="Configure AAA authorization"/>

    <COMMAND name="aaa authorization login"
             help="Configure AAA login authorization"/>

    <COMMAND name="aaa authorization login default"
             help="Configure AAA login authorization default list"
             mode="subcommand"
             ptype="SUBCOMMAND">
      <PARAM name="login"
             help="Select authorization method"
             mode="switch"
             ptype="SUBCOMMAND">
        <PARAM name="group"
               help="Select group"
               test='"${local}"!="local"'
               optional="true"
               mode="subcommand"
               ptype="SUBCOMMAND">
            <PARAM name="ldap"
                   help="Select group of all LDAP servers"
                   mode="subcommand"
                   ptype="SUBCOMMAND">
            </PARAM>
        </PARAM>
        <PARAM name="local"
               help="Select local authorization"
               test='"${ldap}"!="ldap"'
               optional="true"
               mode="subcommand"
               ptype="SUBCOMMAND">
        </PARAM>
      </PARAM>

      <ACTION
          builtin="clish_restcl">oper=PATCH url=/restconf/data/openconfig-system:system/aaa/authorization/openconfig-aaa-ext:login/config/authorization-method body={"openconfig-aaa-ext:authorization-method": ["${local}${ldap}"] }
      </ACTION>
      <DOCGEN>
        <DESCRIPTION>Configures AAA login authorization default list to use ldap</DESCRIPTION>
        <EXAMPLE>
          sonic(config)# aaa authorization login default group ldap
        </EXAMPLE>
      </DOCGEN>
    </COMMAND>

    <COMMAND name="aaa name-service"
             help="Configure AAA name service"/>

    <COMMAND name="aaa name-service group"
             help="Configure AAA group name-service"
             mode="switch"
             ptype="SUBCOMMAND">
      <PARAM name="method"
             help="Selects name-service method"
             mode="switch"
             ptype="SUBCOMMAND">
        <PARAM name="group"
               help="Select group"
               test='"${login}"!="login" -a "${local}"!="local"'
               optional="true"
               mode="subcommand"
               ptype="SUBCOMMAND">
            <PARAM name="ldap"
                   help="Select group of all LDAP servers"
                   mode="subcommand"
                   ptype="SUBCOMMAND">
            </PARAM>
        </PARAM>
        <PARAM name="local"
               help="Select local name-service"
               test='"${login}"!="login" -a "${ldap}"!="ldap"'
               optional="true"
               mode="subcommand"
               ptype="SUBCOMMAND">
        </PARAM>
        <PARAM name="login"
               help="Select login name-service"
               test='"${local}"!="local" -a "${ldap}"!="ldap"'
               optional="true"
               mode="subcommand"
               ptype="SUBCOMMAND">
        </PARAM>
      </PARAM>

      <ACTION
          builtin="clish_restcl">oper=PATCH url=/restconf/data/openconfig-system:system/aaa/openconfig-aaa-ext:name-service/config/group-method body={"openconfig-aaa-ext:group-method": ["${local}${login}${ldap}"] }
      </ACTION>
      <DOCGEN>
        <DESCRIPTION>Configures AAA group name-service to use ldap</DESCRIPTION>
        <EXAMPLE>
          sonic(config)# aaa name-service group group ldap
        </EXAMPLE>
      </DOCGEN>
    </COMMAND>

    <COMMAND name="aaa name-service passwd"
             help="Configure AAA passwd name-service"
             mode="switch"
             ptype="SUBCOMMAND">
      <PARAM name="method"
             help="Select name-service method"
             mode="switch"
