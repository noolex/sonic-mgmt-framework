               ptype="SUBCOMMAND">
        </PARAM>
        <PARAM name="login"
               help="Selects login name-service"
               test='"${local}"!="local" -a "${ldap}"!="ldap"'
               optional="true"
               mode="subcommand"
               ptype="SUBCOMMAND">
