                   mode="subcommand"
                   ptype="SUBCOMMAND">
            </PARAM>
        </PARAM>
      </PARAM>

      <ACTION
          builtin="clish_restcl">oper=PATCH url=/restconf/data/openconfig-system:system/aaa/openconfig-aaa-ext:name-service/config/passwd-method body={"openconfig-aaa-ext:passwd-method": ["${local}${login}${ldap}"] }
      </ACTION>
      <DOCGEN>
        <DESCRIPTION>Configures AAA passwd name-service to use ldap</DESCRIPTION>
        <EXAMPLE>
          sonic(config)# aaa name-service passwd group ldap
        </EXAMPLE>
      </DOCGEN>
    </COMMAND>

