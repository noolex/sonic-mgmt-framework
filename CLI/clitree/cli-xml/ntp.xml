<CLISH_MODULE
    xmlns="http://www.dellemc.com/sonic/XMLSchema"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:xi="http://www.w3.org/2001/XInclude"
    xsi:schemaLocation="http://www.dellemc.com/sonic/XMLSchema
                        http://www.dellemc.com/sonic/XMLSchema/clish.xsd"
    >
<!--=======================================================-->
  <PTYPE
    name="NTP_AUTHENTICATION_TYPE"
    method="select"
    pattern="md5(md5) sha1(sha1) sha2-256(sha2-256)"
    help=""
  />
<!--=======================================================-->
  <PTYPE
    name="STRING_PASSWORD"
    pattern="[^|]+"
    help="WORD"
  />
<!--=======================================================-->
  <PTYPE
     name="NTP_POLL_INTERVAL"
     method="integer"
     pattern="4..17"
     help="seconds"
  />
<!--=======================================================-->


  <VIEW name="enable-view">

    <COMMAND name="show ntp" 
             help="Display NTP information"/>

    <COMMAND name="show ntp global" 
             help="Display NTP global configuration" 
             mode="subcommand" 
             ptype="SUBCOMMAND">
      <ACTION
        builtin="clish_pyobj">sonic_cli_ntp get_ntp_global show_ntp.j2  
      </ACTION>
      <DOCGEN>
          <DESCRIPTION>
              Display global configuration for NTP, which includes VRF configuration and
              source interface configuration.
          </DESCRIPTION>
          <USAGE>
              sonic# show ntp global
          </USAGE>
          <EXAMPLE summary="Display NTP global configuraion">
              sonic# show ntp global
              ----------------------------------------------
              NTP Global Configuration
              ----------------------------------------------
              NTP source-interface:   Ethernet8
              NTP vrf:                default
          </EXAMPLE>
      </DOCGEN>
    </COMMAND>

    <COMMAND name="show ntp server" 
             help="Display NTP server configuration" 
             mode="subcommand" 
             ptype="SUBCOMMAND">
      <ACTION
        builtin="clish_pyobj">sonic_cli_ntp get_ntp_server show_ntp.j2  
      </ACTION>
      <DOCGEN>
          <DESCRIPTION>
              Display configured NTP servers.
          </DESCRIPTION>
          <USAGE>
              sonic# show ntp server
          </USAGE>
          <EXAMPLE summary="Display configured NTP servers">
              sonic# show ntp server
              --------------------------------
              NTP Servers
              --------------------------------
              10.11.0.1
              10.11.0.2
          </EXAMPLE>
      </DOCGEN>
    </COMMAND>

    <COMMAND name="show ntp associations" 
             help="Display NTP associations" 
             mode="subcommand" 
             ptype="SUBCOMMAND">
      <ACTION
        builtin="clish_pyobj">sonic_cli_ntp get_ntp_associations show_ntp.j2  
      </ACTION>
      <DOCGEN>
          <DESCRIPTION>
              Display associated NTP servers and their properties.
          </DESCRIPTION>
          <USAGE>
              sonic# show ntp associations
          </USAGE>
          <EXAMPLE summary="Display associated NTP servers and their properties">
              sonic# show ntp associations
              remote                       refid            st   t  when   poll   reach  delay offset       jitter
              ------------------------------------------------------------------------------------------------------
              *10.11.0.1                   10.14.1.1        4    u  44     64     255    0.258 17915.100    151.732
              +10.11.0.2                   10.11.0.1        5    u  48     64     255    0.306 17774.800    86.586
              ------------------------------------------------------------------------------------------------------
              * master (synced), # master (unsynced), + selected, - candidate, ~ configured
          </EXAMPLE>
      </DOCGEN>
    </COMMAND>

  </VIEW>

  <VIEW name="configure-view">

    <!-- NTP configuration commands -->
    <COMMAND name="ntp"
             help="Configure NTP servers">
    </COMMAND>

    <COMMAND name="no ntp"
             help="Delete NTP configuration">
    </COMMAND>

    <!-- NTP authenticate configuration commands -->
    <COMMAND name="ntp authenticate"
             help="Enables NTP authentication"
             mode="subcommand"
             command_keys="global_key=global"
             command_tables="sonic-system-ntp:sonic-system-ntp/NTP/NTP_LIST/global_key={global_key}"
             dbpath="sonic-system-ntp:sonic-system-ntp/NTP/NTP_LIST/auth_enabled=true">
      <ACTION
        builtin="clish_pyobj">sonic_cli_ntp set_ntp_authentication True
      </ACTION>
      <DOCGEN>
          <DESCRIPTION>
              Enable NTP authentication in configuration mode. By default, NTP authentication is disabled
          </DESCRIPTION>
          <USAGE>
              sonic(config)# ntp authenticate
          </USAGE>
          <EXAMPLE summary="Enable NTP authentication">
              sonic# configure
              sonic(config)# ntp authenticate
          </EXAMPLE>
      </DOCGEN>
    </COMMAND>

    <!-- no NTP authenticate configuration commands -->
    <COMMAND name="no ntp authenticate"
             help="Disable NTP authentication">
      <ACTION
        builtin="clish_pyobj">sonic_cli_ntp set_ntp_authentication False
      </ACTION>
      <DOCGEN>
          <DESCRIPTION>
              Disable NTP authentication in configuration mode.
          </DESCRIPTION>
          <USAGE>
              sonic(config)# no ntp authenticate
          </USAGE>
          <EXAMPLE summary="Disable NTP authentication">
              sonic# configure
              sonic(config)# no ntp authenticate
          </EXAMPLE>
      </DOCGEN>
    </COMMAND>

    <!-- NTP authentication-key configuration commands -->
    <COMMAND name="ntp authentication-key"
             help="Configure NTP authentication key"
             mode="subcommand"
             command_tables="sonic-system-ntp:sonic-system-ntp/NTP_AUTHENTICATION_KEY/NTP_AUTHENTICATION_KEY_LIST/id={id}"
             render_command_cb="ntp_authentication_key">
      <PARAM name="key-number"
             help="Authentication key number"
             ptype="RANGE_1_65535"
             dbpath="sonic-system-ntp:sonic-system-ntp/NTP_AUTHENTICATION_KEY/NTP_AUTHENTICATION_KEY_LIST/id">
        <PARAM name="auth-type"
               help="Authentication type"
               ptype="NTP_AUTHENTICATION_TYPE"
               dbpath="sonic-system-ntp:sonic-system-ntp/NTP_AUTHENTICATION_KEY/NTP_AUTHENTICATION_KEY_LIST/type">
          <PARAM name="key"
                 help="Authentication-key string (max 64 chars, key longer than 20 chars must be hex)"
                 ptype="STRING_PASSWORD"
                 dbpath="sonic-system-ntp:sonic-system-ntp/NTP_AUTHENTICATION_KEY/NTP_AUTHENTICATION_KEY_LIST/value">
            <PARAM name="encrypted"
                   help = "Key is in encrypted format"
                   ptype="SUBCOMMAND"
                   mode="subcommand"
                   optional="true"
                   hidden="true"
                   dbpath="sonic-system-ntp:sonic-system-ntp/NTP_AUTHENTICATION_KEY/NTP_AUTHENTICATION_KEY_LIST/encrypted">
            </PARAM>
          </PARAM>
        </PARAM>
      </PARAM>
      <ACTION
        builtin="clish_pyobj">sonic_cli_ntp set_ntp_authentication_key ${key-number} ${auth-type} ${#key} ${encrypted}
      </ACTION>
      <DOCGEN>
          <DESCRIPTION>
              Configure NTP authentication key.
          </DESCRIPTION>
          <USAGE>
              sonic(config)# ntp authentication-key key-number auth-type key encrypted
              "encrypted" is optional
          </USAGE>
          <EXAMPLE summary="Configure NTP authentication-key">
              sonic# configure
              sonic(config)# ntp authentication-key 128 md5 DellEmc2020
              sonic(config)# ntp authentication-key 128 md5 dryjsgjd123 encrypted
          </EXAMPLE>
      </DOCGEN>
    </COMMAND>

    <!-- no NTP authentication-key configuration commands -->
    <COMMAND name="no ntp authentication-key"
             help="Delete NTP authentication-key"
             mode="subcommand">
      <PARAM name="key-number"
             help="Authentication key number"
             ptype="RANGE_1_65535">
      </PARAM>
      <ACTION
        builtin="clish_pyobj">sonic_cli_ntp delete_ntp_authentication_key ${key-number}
      </ACTION>
      <DOCGEN>
          <DESCRIPTION>
              Delete NTP authentication-key.
          </DESCRIPTION>
          <USAGE>
              sonic(config)# no ntp authentication-key 
                   key-number  Authentication key number
          </USAGE>
          <EXAMPLE summary="Delete NTP authentication-key">
              sonic# configure
              sonic(config)# no ntp authentication-key 128
          </EXAMPLE>
      </DOCGEN>
    </COMMAND>

    <!-- NTP server configuration commands -->
    <COMMAND name="ntp server"
             help="Configure NTP server"
             mode="subcommand"
             command_tables="sonic-system-ntp:sonic-system-ntp/NTP_SERVER/NTP_SERVER_LIST/server_address={addr}">
      <PARAM name="svropt"
             help="Address of NTP server"
             mode="switch"
             ptype="SUBCOMMAND">
        <PARAM name="ip"
               help="IPv4/IPv6 address of NTP server"
               ptype="IPV4V6_ADDR"
               dbpath="sonic-system-ntp:sonic-system-ntp/NTP_SERVER/NTP_SERVER_LIST/server_address">
        </PARAM>
        <PARAM name="server-name"
               help="Hostname of NTP server (Max: 253 characters)"
               ptype="HOSTNAME_STR_64"
               dbpath="sonic-system-ntp:sonic-system-ntp/NTP_SERVER/NTP_SERVER_LIST/server_address">
        </PARAM>
      </PARAM>
      <PARAM name="key"
             help="NTP server authentication key"
             ptype="SUBCOMMAND"
             mode="subcommand"
             optional="true">
        <PARAM name="key-number"
               help="NTP server authentication key number"
               ptype="RANGE_1_65535"
               dbpath="sonic-system-ntp:sonic-system-ntp/NTP_SERVER/NTP_SERVER_LIST/key_id">
        </PARAM>
      </PARAM>
      <PARAM name="minpoll"
             help="NTP minimum poll interval to poll server"
             ptype="SUBCOMMAND"
             mode="subcommand"
             optional="true">
        <PARAM name="min-poll"
               help="NTP minimum poll interval for NTP messages, in seconds as a power of two"
               ptype="NTP_POLL_INTERVAL"
               dbpath="sonic-system-ntp:sonic-system-ntp/NTP_SERVER/NTP_SERVER_LIST/minpoll">
          <PARAM name="maxpoll"
                 help="NTP maximum poll interval to poll server"
                 ptype="SUBCOMMAND"
                 mode="subcommand">
            <PARAM name="max-poll"
                   help="NTP maximum poll interval for NTP messages, in seconds as a power of two"
                   ptype="NTP_POLL_INTERVAL"
                   dbpath="sonic-system-ntp:sonic-system-ntp/NTP_SERVER/NTP_SERVER_LIST/maxpoll">
            </PARAM>
          </PARAM>
        </PARAM>
      </PARAM>
      <ACTION
        builtin="clish_pyobj">sonic_cli_ntp set_ntp_server ${ip} ${server-name} key:${key-number} minpoll:${min-poll} maxpoll:${max-poll}
      </ACTION>
      <DOCGEN>
          <DESCRIPTION>
              Configure a NTP server in configuration mode. NTP sever can be identified by
              IPv4, IPv6 address or host name.
          </DESCRIPTION>
          <USAGE>
              sonic(config)# ntp server NTP-SERVER-IP
              sonic(config)# ntp server NTP-SERVER-HOST-NAME
              NTP-SERVER-IP:        A.B.C.D/A::B                         IPv4/IPv6 address of NTP server
              NTP-SERVER-HOST-NAME: WORD (Max: 253 characters)           Hostname of NTP server
          </USAGE>
          <EXAMPLE summary="Configure a NTP server">
              sonic# configure
              sonic(config)# ntp server 10.11.0.1 key 128
              sonic(config)# ntp server pool.ntp.org
          </EXAMPLE>
      </DOCGEN>
    </COMMAND>

    <!-- no NTP server configuration commands -->
    <COMMAND name="no ntp server"
             help="Delete NTP server">
      <PARAM name="svropt"
             help="Address of NTP server"
             mode="switch"
             ptype="SUBCOMMAND">
        <PARAM name="ip"
               help="IPv4/IPv6 address of NTP server"
               ptype="IPV4V6_ADDR">
        </PARAM>
        <PARAM name="server-name"
               help="Hostname of NTP server"
               ptype="HOSTNAME_STR_64">
        </PARAM>
      </PARAM>
      <ACTION
        builtin="clish_pyobj">sonic_cli_ntp delete_ntp_server ${ip} ${server-name}
      </ACTION>
      <DOCGEN>
          <DESCRIPTION>
              Delete a configured NTP server in configuration mode. NTP server can be identified by
              IPv4, IPv6 address or host name.
          </DESCRIPTION>
          <USAGE>
              sonic(config)# no ntp server NTP-SERVER-IP
              sonic(config)# no ntp server NTP-SERVER-HOST-NAME
              NTP-SERVER-IP:        A.B.C.D/A::B         IPv4/IPv6 address of NTP server
              NTP-SERVER-HOST-NAME: WORD                 Hostname of NTP server
          </USAGE>
          <EXAMPLE summary="Delete a NTP server">
              sonic# configure
              sonic(config)# no ntp server 10.11.0.1
              sonic(config)# no ntp server pool.ntp.org
          </EXAMPLE>
      </DOCGEN>
    </COMMAND>

    <!-- NTP source configuration commands -->
    <COMMAND name="ntp source-interface"
             help="Configure NTP source interface to pick the source IP, used for the NTP packets"
             ptype="SUBCOMMAND"
             mode="subcommand"
             command_keys="global_key=global"
             command_tables="sonic-system-ntp:sonic-system-ntp/NTP/NTP_LIST/global_key={global_key}"
             render_command_cb="ntp_server_source_if">
      <PARAM name="iftype"
             help="Interface type"
             mode="switch"
             ptype="SUBCOMMAND">
        <PARAM name="Ethernet"
               help="Ethernet interface"
               ptype="PHY_INTERFACE"
               mode="subcommand">
        </PARAM>
        <PARAM name="Loopback"
               help="Loopback interface"
               ptype="LOOPBACK_INTERFACE"
               mode="subcommand">
        </PARAM>
        <PARAM name="Management"
               help="Management Interface"
               ptype="MGMT_INTERFACE"
               mode="subcommand">
        </PARAM>
        <PARAM name="PortChannel"
               help="PortChannel interface"
               ptype="PO_INTERFACE"
               mode="subcommand">
        </PARAM>
        <PARAM name="Vlan"
               help="Vlan interface"
               ptype="VLAN_INTERFACE"
               mode="subcommand">
        </PARAM>
      </PARAM>
      <ACTION
        builtin="clish_pyobj">sonic_cli_ntp set_ntp_source ${Ethernet} ${Loopback} ${Management} ${PortChannel} ${Vlan}
      </ACTION>
      <DOCGEN>
          <DESCRIPTION>
              Configure NTP source interface in configuration mode. NTP source interface can be
              an ethernet, loopback, management, port channel or vlan interface.
          </DESCRIPTION>
          <USAGE>
              sonic(config)# ntp source-interface INTERFACE
              INTERFACE: Ethernet     Ethernet interface
                         Loopback     Loopback interface
                         Management   Management Interface
                         PortChannel  PortChannel interface
                         Vlan         Vlan interface
          </USAGE>
          <EXAMPLE summary="Configure NTP source interface">
              sonic# configure
              sonic(config)# ntp source-interface Ethernet 8
              sonic(config)# ntp source-interface Management 0
              sonic(config)# ntp source-interface Loopback 88
              sonic(config)# ntp source-interface PortChannel 18
              sonic(config)# ntp source-interface Vlan 888
          </EXAMPLE>
      </DOCGEN>
    </COMMAND>

    <!-- no NTP source configuration commands -->
    <COMMAND name="no ntp source-interface"
             help="Delete NTP source-interface"
             ptype="SUBCOMMAND"
             mode="subcommand">
      <PARAM name="iftype"
             help="Interface type"
             mode="switch"
             ptype="SUBCOMMAND">
        <PARAM name="Ethernet"
               help="Ethernet interface"
               ptype="PHY_INTERFACE"
               mode="subcommand">
        </PARAM>
        <PARAM name="Loopback"
               help="Loopback interface"
               ptype="LOOPBACK_INTERFACE"
               mode="subcommand">
        </PARAM>
        <PARAM name="Management"
               help="Management Interface"
               ptype="MGMT_INTERFACE"
               mode="subcommand">
        </PARAM>
        <PARAM name="PortChannel"
               help="PortChannel interface"
               ptype="PO_INTERFACE"
               mode="subcommand">
        </PARAM>
        <PARAM name="Vlan"
               help="Vlan interface"
               ptype="VLAN_INTERFACE"
               mode="subcommand">
        </PARAM>
      </PARAM>
      <ACTION
        builtin="clish_pyobj">sonic_cli_ntp delete_ntp_source ${Ethernet} ${Loopback} ${Management} ${PortChannel} ${Vlan}
      </ACTION>
      <DOCGEN>
          <DESCRIPTION>
              Delete configured NTP source interface in configuration mode.
          </DESCRIPTION>
          <USAGE>
              sonic(config)# no ntp source-interface
          </USAGE>
          <EXAMPLE summary="Delete NTP source interface">
              sonic# configure
              sonic(config)# no ntp source-interface
          </EXAMPLE>
      </DOCGEN>
    </COMMAND>

    <!-- NTP trusted-key configuration commands -->
    <COMMAND name="ntp trusted-key"
             help="Configure NTP authentication key number for trusted time source"
             mode="subcommand"
             command_keys="global_key=global"
             command_tables="sonic-system-ntp:sonic-system-ntp/NTP/NTP_LIST/global_key={global_key}"
             render_command_cb="ntp_trusted_key">
      <PARAM name="key-number"
             help="Trusted key number"
             ptype="RANGE_1_65535">
      </PARAM>
      <ACTION
        builtin="clish_pyobj">sonic_cli_ntp set_ntp_trusted_key ${key-number}
      </ACTION>
      <DOCGEN>
          <DESCRIPTION>
              Configure NTP authentication key number for trusted time source.
          </DESCRIPTION>
          <USAGE>
              sonic(config)# ntp trusted-key
                   key-number  Trusted key number
          </USAGE>
          <EXAMPLE summary="Configure NTP trusted-key number">
              sonic# configure
              sonic(config)# ntp trusted-key 128
          </EXAMPLE>
      </DOCGEN>
    </COMMAND>

    <!-- no NTP trusted-key configuration commands -->
    <COMMAND name="no ntp trusted-key"
             help="Delete NTP trusted-key"
             mode="subcommand">
      <PARAM name="key-number"
             help="Trusted key number"
             ptype="RANGE_1_65535">
      </PARAM>
      <ACTION
        builtin="clish_pyobj">sonic_cli_ntp delete_ntp_trusted_key ${key-number}
      </ACTION>
      <DOCGEN>
          <DESCRIPTION>
              Delete NTP trusted-key number.
          </DESCRIPTION>
          <USAGE>
              sonic(config)# no ntp trusted-key 
                   key-number  Trusted key number
          </USAGE>
          <EXAMPLE summary="Delete NTP trusted-key number">
              sonic# configure
              sonic(config)# no ntp trusted-key 128
          </EXAMPLE>
      </DOCGEN>
    </COMMAND>

    <!-- NTP VRF configuration commands -->
    <COMMAND name="ntp vrf"
             help="Enable NTP on VRF"
             mode="subcommand"
             command_keys="global_key=global"
             command_tables="sonic-system-ntp:sonic-system-ntp/NTP/NTP_LIST/global_key={global_key}">
      <PARAM name="vrfopt"
             help="VRF type"
             mode="switch"
             ptype="SUBCOMMAND">
        <PARAM name="mgmt"
               help="Enable NTP on management VRF"
               ptype="SUBCOMMAND"
               mode="subcommand"
               dbpath="sonic-system-ntp:sonic-system-ntp/NTP/NTP_LIST/vrf=mgmt">
        </PARAM>
        <PARAM name="default"
               help="Enable NTP on default VRF"
               ptype="SUBCOMMAND"
               mode="subcommand"
               dbpath="sonic-system-ntp:sonic-system-ntp/NTP/NTP_LIST/vrf=default">
        </PARAM>
      </PARAM>
      <ACTION
        builtin="clish_pyobj">sonic_cli_ntp set_ntp_vrf ${mgmt} ${default}
      </ACTION>
      <DOCGEN>
          <DESCRIPTION>
              Enable NTP on VRF in configuration mode. NTP can be enabled on management VRF or default VRF.
          </DESCRIPTION>
          <USAGE>
              sonic(config)# ntp vrf VRF
              VRF: mgmt     Enable NTP on management VRF
                   default  Enable NTP on default VRF
          </USAGE>
          <EXAMPLE summary="Enable NTP on VRF">
              sonic# configure
              sonic(config)# ntp vrf mgmt
              sonic(config)# ntp vrf default
          </EXAMPLE>
      </DOCGEN>
    </COMMAND>

    <!-- no NTP VRF configuration commands -->
    <COMMAND name="no ntp vrf"
             help="Disable NTP on VRF">
      <ACTION
        builtin="clish_pyobj">sonic_cli_ntp delete_ntp_vrf
      </ACTION>
      <DOCGEN>
          <DESCRIPTION>
              Disable NTP on VRF in configuration mode.
          </DESCRIPTION>
          <USAGE>
              sonic(config)# no ntp vrf
          </USAGE>
          <EXAMPLE summary="Disable NTP on VRF">
              sonic# configure
              sonic(config)# no ntp vrf
          </EXAMPLE>
      </DOCGEN>
    </COMMAND>

  </VIEW>

</CLISH_MODULE>
