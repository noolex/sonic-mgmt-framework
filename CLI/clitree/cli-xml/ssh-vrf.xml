<CLISH_MODULE
    xmlns="http://www.dellemc.com/sonic/XMLSchema"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:xi="http://www.w3.org/2001/XInclude"
    xsi:schemaLocation="http://www.dellemc.com/sonic/XMLSchema
    http://www.dellemc.com/sonic/XMLSchema/clish.xsd"
    >
    <VIEW name="enable-view">
      <COMMAND help="Display SSH server information" name="show ssh-server">
      </COMMAND>

      <COMMAND name="show ssh-server vrf" help="Display SSH server status for VRF">
        <PARAM name="vrf-switch" help="" ptype="SUBCOMMAND" mode="switch">
          <PARAM 
            name = "all"
            help = "Show SSH server status for all VRFs"
            ptype = "SUBCOMMAND"
            mode = "subcommand"
            />
          <PARAM 
            name = "vrf-name"
            help = "Name of VRF (Max: 15 characters, mgmt or prefixed with Vrf)"
            ptype = "VRF_OR_MGMT"
            />
        </PARAM>
		<ACTION  builtin="clish_pyobj">sonic_cli_ssh_vrf get_openconfig_system_ssh_server_vrfs ${vrf-name} </ACTION>
        <DOCGEN>
            <DESCRIPTION>Shows list of VRFs on which ssh server is enabled</DESCRIPTION>
            <EXAMPLE>
                sonic# show ssh-server vrf all
                            VRF Name                          Status
                 -------------------------------- --------------------------------
                            Vrf1                             enable
                            Vrf34                            enable
                            Vrf5                             enable

                sonic# show ssh-server vrf Vrf5
                            VRF Name                          Status
                 -------------------------------- --------------------------------
                            Vrf5                             enable
            </EXAMPLE>
        </DOCGEN>
      </COMMAND>
    </VIEW>

    <VIEW name="hidden-view">
      <COMMAND name="show ssh-server vrfs" help="Display SSH server status for all VRFs">
        <ACTION  builtin="clish_pyobj">sonic_cli_ssh_vrf get_openconfig_system_ssh_server_vrfs</ACTION>
      </COMMAND>
    </VIEW>

    <VIEW name="configure-view">
      <!-- ssh -->
    <COMMAND name="ssh-server"
             help="Configure SSH server"/>
    <!-- vrf configuration commands -->
    <COMMAND
      name="ssh-server vrf"
      help="Enable SSH server on a VRF"
      mode="subcommand"
      ptype="SUBCOMMAND"
      command_tables="sonic-ssh-server-vrf:sonic-ssh-server-vrf/SSH_SERVER_VRF/SSH_SERVER_VRF_LIST/vrf_name"
      >
      <PARAM
        name="vrf-name"
        help="Name of VRF (Max: 15 characters, mgmt or prefixed with Vrf)"
        ptype="VRF_OR_MGMT"
        dbpath="sonic-ssh-server-vrf:sonic-ssh-server-vrf/SSH_SERVER_VRF/SSH_SERVER_VRF_LIST/vrf_name"
        >
      </PARAM>
	  <ACTION  builtin="clish_pyobj">sonic_cli_ssh_vrf patch_openconfig_system_ssh_server_vrf ${vrf-name}</ACTION>
      <DOCGEN>
          <DESCRIPTION>Enable ssh server on give VRF</DESCRIPTION>
          <EXAMPLE>
              sonic(config)# ssh-server vrf Vrf2
              sonic(config)#
          </EXAMPLE>
      </DOCGEN>
    </COMMAND>

    <!-- no vrf commands -->
    <COMMAND name="no ssh-server"
             help="Disable SSH server"/>
    <COMMAND
      name="no ssh-server vrf"
      help="Disable SSH server on a VRF"
      mode="subcommand"
      ptype="SUBCOMMAND"
      >
      <PARAM
        name="vrf-name"
        help="Name of VRF (Max: 15 characters, mgmt or prefixed with Vrf)"
        ptype="VRF_OR_MGMT"
        >
      </PARAM>
	  <ACTION  builtin="clish_pyobj">sonic_cli_ssh_vrf delete_openconfig_system_ssh_server_vrf ${vrf-name}</ACTION>
      <DOCGEN>
          <DESCRIPTION>Disable ssh server of given VRF</DESCRIPTION>
          <EXAMPLE>
              sonic(config)# no ssh-server vrf Vrf2
              sonic(config)# 
          </EXAMPLE>
      </DOCGEN>
    </COMMAND>

    </VIEW>

</CLISH_MODULE>
