{% if json_output -%}
   {% set gbl_cfg = json_output['openconfig-system:dns']['config'] %}
   {% if gbl_cfg -%}
      {% set src_intf = gbl_cfg['openconfig-system-ext:source-intf'] %}
      {% if src_intf == "eth0" %}
          {% set src_intf = "Management0" %}
      {% endif %}  
Source Interface: {{src_intf}}
   {% endif %}
   {% set servers = json_output['openconfig-system:dns']['servers'] %}
   {% if servers -%}
     {% set server_list = servers['server'] %}
     {% if server_list -%}
       {% set server_ip = [] %}
       {%for server in server_list %}
       {% do server_ip.append(server['address']) %}
       {% endfor %}
Name servers are: {{server_ip|join(', ')}}
    {% endif %}
   {% endif %}
{% endif %}

